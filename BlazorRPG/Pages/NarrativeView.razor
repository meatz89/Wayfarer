@* NarrativeView.razor *@
@inject GameManager GameManager
@inject GameState GameState

<div class="narrative-container">
    <div class="narrative-text">
        @if (ShowResult)
        {
                @if (Result.encounterResults == EncounterResults.EncounterSuccess)
                {
                    <h3>Encounter Won!</h3>
                    <p>@((MarkupString)NarrativeText)</p>
                }
                else if (Result.encounterResults == EncounterResults.EncounterFailure)
                {
                    <h3>Encounter Lost</h3>
                    <p>@((MarkupString)NarrativeText)</p>
                }
                else if (Result.encounterResults == EncounterResults.GameOver)
                {
                    <h3>Game Over</h3>
                    <p>@((MarkupString)NarrativeText)</p>
                }

                @* Display any additional information here, e.g., rewards gained, resources lost, etc. *@
        }
        else {
                @if (!string.IsNullOrEmpty(NarrativeText))
                {
                    <p>@((MarkupString)NarrativeText)</p>
                }
        }
    </div>

    <button class="narrative-button" @onclick="OnNarrativeCompleted">
        Continue
    </button>
</div>

@code {
    [Parameter] public LocationNames LocationName { get; set; }
    [Parameter] public EventCallback OnNarrativeCompleted { get; set; }
    // Add these properties:
    [Parameter] public EncounterResult Result { get; set; }
    [Parameter] public bool ShowResult { get; set; } = false;

    private string NarrativeText { get; set; }

    protected override void OnParametersSet()
    {
        // Fetch the narrative text based on the LocationName or result
        if (!ShowResult)
        {
            NarrativeText = GameManager.GetLocationNarrative(LocationName);
        }
        else {
            NarrativeText = Result.EncounterEndMessage;
        }
    }
}