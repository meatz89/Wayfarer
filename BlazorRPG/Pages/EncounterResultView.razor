@* EncounterResultView.razor *@
@inherits ComponentBase

<div class="encounter-result-overlay">
    <div class="encounter-result-panel">

        @if (Result.encounterResults == EncounterResults.EncounterSuccess)
        {
            <h3>Encounter Won!</h3>
            <div class="result-message">
                <p>@Result.EncounterEndMessage</p>
            </div>
        }
        else if (Result.encounterResults == EncounterResults.EncounterFailure)
        {
            <h3>Encounter Lost</h3>
            <div class="result-message">
                <p>You were unable to overcome the challenges of this encounter.</p>
                <p>@Result.EncounterEndMessage</p>
            </div>
        }
        else if (Result.encounterResults == EncounterResults.GameOver)
        {
            <h3>Game Over</h3>
            <div class="result-message">
                <p>The challenges proved too great. Your journey ends here.</p>
                <p>@Result.EncounterEndMessage</p>
            </div>
        }

        @* Display any additional information here, e.g., rewards gained, resources lost, etc. *@

        <button class="action-button" @onclick="OnContinue">Continue</button>
    </div>
</div>

@code {
    [Parameter]
    public EncounterResult Result { get; set; }

    [Parameter]
    public EventCallback OnContinue { get; set; }
}