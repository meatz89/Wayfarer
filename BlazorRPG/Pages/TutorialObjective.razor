@if (GameState.GameMode == Modes.Tutorial)
{
    <div class="tutorial-objective">
        <div class="objective-title">Current Objective:</div>
        <div class="objective-text">@GetCurrentObjectiveText()</div>

        @if (!string.IsNullOrEmpty(TutorialState.GetCurrentHint()))
        {
            <div class="objective-hint">
                <span class="hint-icon">💡</span>
                @TutorialState.GetCurrentHint()
            </div>
        }
    </div>
}

@code {
    [Inject] private GameState GameState { get; set; }
    [Inject] private TutorialState TutorialState { get; set; }
    [Parameter] public int StateVersion { get; set; }

    public string GetCurrentObjectiveText()
    {
        string objective = TutorialState.GetCurrentObjectiveText();
        return objective;
    }
}