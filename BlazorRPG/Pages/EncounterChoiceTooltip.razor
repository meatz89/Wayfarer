@inherits EncounterChoiceTooltipBase
<div class="tooltip" style="left: @(mouseX)px; top: @(mouseY)px;">
    <div class="preview-header">
        <h4>@hoveredChoice.Description</h4>
        <div class="choice-narrative">@hoveredChoice.Narrative</div>
    </div>

    <div class="tooltip-section">
        <h5>Effect</h5>
        <div class="tooltip-list">
            
            <!-- Add this section before the momentum/pressure components -->
            @if (Preview.DisabledTagNames.Count > 0)
            {
                <div class="tooltip-alert @(Preview.DisabledTagNames.Count > 1 ? "danger" : "warning")">
                    <span class="alert-icon">⚠️</span>
                    <span class="alert-text">
                        @(Preview.DisabledTagNames.Count > 1 ? "High pressure has disabled beneficial tags!" : "High pressure has disabled a beneficial tag!")
                    </span>
                </div>
            }

            <!-- Add this section to show newly disabled tags in projection -->
            @if (Preview.NewlyDisabledTags.Count > 0)
            {
                <div class="tooltip-section">
                    <h5>Tags That Will Be Disabled</h5>
                    <div class="tooltip-list">
                        @foreach (var tagName in Preview.NewlyDisabledTags)
                        {
                            <div class="tooltip-item disabled-tag">
                                <div class="tooltip-item-header">
                                    <div class="tooltip-item-title">
                                        <span class="tooltip-item-name">@tagName</span>
                                        <span class="disabled-icon">❌</span>
                                    </div>
                                </div>
                                <div class="tooltip-item-details">
                                    <div class="tooltip-detail-line danger">Disabled by high pressure</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (Preview.MomentumComponents.Count > 0)
            {
                <div class="tooltip-item">
                    <div class="tooltip-item-header">
                        <div class="tooltip-item-title">
                            <span class="tooltip-item-name">Momentum Change</span>
                        </div>
                    </div>
                    <div class="tooltip-item-details">
                        <div class="tooltip-detail-line @(Preview.MomentumGained > 0 ? "positive" : Preview.MomentumGained < 0 ? "negative" : "")">
                            @(Preview.MomentumGained > 0 ? "+" : "")@Preview.MomentumGained
                        </div>
                        @foreach (var component in Preview.MomentumComponents)
                        {
                            <div class="tooltip-detail-line calculation-component">
                                <span class="component-source">@component.Source:</span>
                                <span class="component-value @(component.Value > 0 ? "positive" : component.Value < 0 ? "negative" : "")">
                                    @(component.Value > 0 ? "+" : "")@component.Value
                                </span>
                            </div>
                        }
                        <!-- In EncounterChoiceTooltip.razor -->
                        @if (Preview.MomentumComponents.Any(c => c.Source == "High pressure penalty"))
                        {
                            <div class="tooltip-alert warning">
                                <span class="alert-icon">⚠️</span>
                                <span class="alert-text">High pressure is reducing momentum gain!</span>
                            </div>
                        }

                        @if (AreTagsDisabledByPressure())
                        {
                            <div class="tooltip-alert danger">
                                <span class="alert-icon">❌</span>
                                <span class="alert-text">High pressure has disabled beneficial tags!</span>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (Preview.PressureComponents.Count > 0)
            {
                <div class="tooltip-item">
                    <div class="tooltip-item-header">
                        <div class="tooltip-item-title">
                            <span class="tooltip-item-name">Pressure Change</span>
                        </div>
                    </div>
                    <div class="tooltip-item-details">
                        <div class="tooltip-detail-line @(Preview.PressureBuilt > 0 ? "positive" : Preview.PressureBuilt < 0 ? "negative" : "")">
                            @(Preview.PressureBuilt > 0 ? "+" : "")@Preview.PressureBuilt
                        </div>
                        @foreach (var component in Preview.PressureComponents)
                        {
                            <div class="tooltip-detail-line calculation-component">
                                <span class="component-source">@component.Source:</span>
                                <span class="component-value @(component.Value > 0 ? "positive" : component.Value < 0 ? "negative" : "")">
                                    @(component.Value > 0 ? "+" : "")@component.Value
                                </span>
                            </div>
                        }
                    </div>
                </div>
            }

        </div>
    </div>

    @if (GetApproachTagChanges().Count + GetFocusTagChanges().Count > 0)
    {
        <div class="tooltip-section">
            <h5>Tag Modifications</h5>
            <div class="tooltip-list">
                @foreach (var tagChange in GetApproachTagChanges())
                {
                    <div class="tooltip-item">
                        <div class="tooltip-item-header">
                            <div class="tooltip-item-title">
                                <span class="tooltip-item-name">@tagChange.Key</span>
                            </div>
                        </div>
                        <div class="tooltip-item-details">
                            <div class="tooltip-detail-line @(tagChange.Value > 0 ? "positive" : "negative")">
                                @(tagChange.Value > 0 ? "+" : "")@tagChange.Value
                            </div>
                        </div>
                    </div>
                }
                @foreach (var tagChange in GetFocusTagChanges())
                {
                    <div class="tooltip-item">
                        <div class="tooltip-item-header">
                            <div class="tooltip-item-title">
                                <span class="tooltip-item-name">@tagChange.Key</span>
                            </div>
                        </div>
                        <div class="tooltip-item-details">
                            <div class="tooltip-detail-line @(tagChange.Value > 0 ? "positive" : "negative")">
                                @(tagChange.Value > 0 ? "+" : "")@tagChange.Value
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    @if (Preview.NewlyActivatedTags.Count > 0)
    {
        <div class="tooltip-section">
            <h5>Newly Activated Tags</h5>
            <div class="tooltip-list">
                @foreach (var tag in Preview.NewlyActivatedTags)
                {
                    <div class="tooltip-item">
                        <div class="tooltip-item-header">
                            <div class="tooltip-item-title">
                                <span class="tooltip-item-name">@tag</span>
                            </div>
                        </div>
                        <div class="tooltip-item-details">
                            <div class="tooltip-detail-line">@GetTagEffectDescription(tag)</div>

                            @if (HasActivationEffect(tag))
                            {
                                <div class="tooltip-detail-line activation-effect">
                                    <span class="activation-effect-text">@GetActivationEffectDescription(tag)</span>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>