@inherits EncounterChoiceTooltipBase
<div class="tooltip" style="left: @(mouseX)px; top: @(mouseY)px;">
    <div class="preview-header">
        <h4>
            @hoveredChoice.Description
        </h4>
        <div class="choice-narrative">@GetChoiceDescription(@hoveredChoice)</div>
    </div>

    <div class="tooltip-section">
        <h4>
            Effects
        </h4>

        <div class="effects-section">
            @if (hoveredChoice.Choice is ChoiceCard cardChoiceTier)
            {
                <span class="tier-badge tier-@((int)cardChoiceTier.Tier)">
                    @GetTierName(cardChoiceTier.Tier)
                </span>
            }
            @{
                // Get the approach affinity for this choice
                AffinityTypes affinity = GameState.PlayerState.GetApproachAffinity(
                hoveredChoice.Choice.Approach);

                // Determine CSS class and text
                string affinityClass =
                affinity == AffinityTypes.Natural ? "natural-affinity" :
                affinity == AffinityTypes.Unnatural ? "unnatural-affinity" :
                affinity == AffinityTypes.Dangerous ? "dangerous-affinity" :
                "neutral-affinity";

                string affinityText =
                affinity == AffinityTypes.Natural ? "Natural" :
                affinity == AffinityTypes.Unnatural ? "Unnatural" :
                affinity == AffinityTypes.Dangerous ? "Dangerous" :
                "Neutral";
            }
            <span class="affinity-badge @affinityClass">
                @affinityText Affinity
            </span>
        </div>

        <div class="tooltip-list">
            @if (Preview.HealthChange != 0)
            {
                <div class="tooltip-item">
                    <div class="tooltip-item-header">
                        <div class="tooltip-item-title">
                            <span class="tooltip-item-name">Health Change</span>
                        </div>
                    </div>
                    <div class="tooltip-item-details">
                        <div class="tooltip-detail-line @(Preview.HealthChange > 0 ? "positive" : "negative")">
                            @(Preview.HealthChange > 0 ? "+" : "")@Preview.HealthChange
                        </div>
                        @foreach (var component in Preview.HealthComponents)
                        {
                            <div class="tooltip-detail-line calculation-component">
                                <span class="component-source">@component.Source:</span>
                                <span class="component-value @(component.Value > 0 ? "positive" : "negative")">
                                    @(component.Value > 0 ? "+" : "")@component.Value
                                </span>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (Preview.ConcentrationChange != 0)
            {
                <div class="tooltip-item">
                    <div class="tooltip-item-header">
                        <div class="tooltip-item-title">
                            <span class="tooltip-item-name">Concentration Change</span>
                        </div>
                    </div>
                    <div class="tooltip-item-details">
                        <div class="tooltip-detail-line @(Preview.ConcentrationChange > 0 ? "positive" : "negative")">
                            @(Preview.ConcentrationChange > 0 ? "+" : "")@Preview.ConcentrationChange
                        </div>
                        @foreach (var component in Preview.ConcentrationComponents)
                        {
                            <div class="tooltip-detail-line calculation-component">
                                <span class="component-source">@component.Source:</span>
                                <span class="component-value @(component.Value > 0 ? "positive" : "negative")">
                                    @(component.Value > 0 ? "+" : "")@component.Value
                                </span>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (Preview.ConfidenceChange != 0)
            {
                <div class="tooltip-item">
                    <div class="tooltip-item-header">
                        <div class="tooltip-item-title">
                            <span class="tooltip-item-name">Confidence Change</span>
                        </div>
                    </div>
                    <div class="tooltip-item-details">
                        <div class="tooltip-detail-line @(Preview.ConfidenceChange > 0 ? "positive" : "negative")">
                            @(Preview.ConfidenceChange > 0 ? "+" : "")@Preview.ConfidenceChange
                        </div>
                        @foreach (var component in Preview.ConfidenceComponents)
                        {
                            <div class="tooltip-detail-line calculation-component">
                                <span class="component-source">@component.Source:</span>
                                <span class="component-value @(component.Value > 0 ? "positive" : "negative")">
                                    @(component.Value > 0 ? "+" : "")@component.Value
                                </span>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (Preview.StrategicTagEffects.Count > 0)
            {
                <div class="tooltip-item">
                    <div class="tooltip-item-header">
                        <div class="tooltip-item-title">
                            <span class="tooltip-item-name">Strategic Tags</span>
                        </div>
                    </div>
                    <div class="tooltip-item-details">
                        @foreach (var component in Preview.StrategicTagEffects)
                        {
                            <div class="tooltip-detail-line">
                                @component
                            </div>
                        }
                    </div>
                </div>
            }

            @if (Preview.MomentumComponents.Count > 0)
            {
                <div class="tooltip-item">
                    <div class="tooltip-item-header">
                        <div class="tooltip-item-title">
                            <span class="tooltip-item-name">Momentum Change</span>
                        </div>
                    </div>
                    <div class="tooltip-item-details">
                        <div class="tooltip-detail-line @(Preview.MomentumGained > 0 ? "positive" : Preview.MomentumGained < 0 ? "negative" : "")">
                            @(Preview.MomentumGained > 0 ? "+" : "")@Preview.MomentumGained
                        </div>
                        @foreach (var component in Preview.MomentumComponents)
                        {
                            <div class="tooltip-detail-line calculation-component">
                                <span class="component-source">@component.Source:</span>
                                <span class="component-value @(component.Value > 0 ? "positive" : component.Value < 0 ? "negative" : "")">
                                    @(component.Value > 0 ? "+" : "")@component.Value
                                </span>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (Preview.PressureComponents.Count > 0)
            {
                <div class="tooltip-item">
                    <div class="tooltip-item-header">
                        <div class="tooltip-item-title">
                            <span class="tooltip-item-name">Pressure Change</span>
                        </div>
                    </div>
                    <div class="tooltip-item-details">
                        <div class="tooltip-detail-line @(Preview.PressureBuilt > 0 ? "negative" : Preview.PressureBuilt < 0 ? "positive" : "")">
                            @(Preview.PressureBuilt > 0 ? "+" : "")@Preview.PressureBuilt
                        </div>
                        @foreach (var component in Preview.PressureComponents)
                        {
                            <div class="tooltip-detail-line calculation-component">
                                <span class="component-source">@component.Source:</span>
                                <span class="component-value @(component.Value > 0 ? "negative" : component.Value < 0 ? "positive" : "")">
                                    @(component.Value > 0 ? "+" : "")@component.Value
                                </span>
                            </div>
                        }
                    </div>
                </div>
            }

        </div>

        @if (GetApproachTagChanges().Count + GetFocusTagChanges().Count > 0)
        {
            <div class="tooltip-section">
                <div class="tooltip-list">
                    @foreach (var tagChange in GetApproachTagChanges())
                    {
                        <div class="tooltip-item">
                            <div class="tooltip-item-header">
                                <div class="tooltip-item-title">
                                    <span class="tooltip-item-name">@tagChange.Key</span>
                                </div>
                            </div>
                            <div class="tooltip-item-details">
                                <div class="tooltip-detail-line @(tagChange.Value > 0 ? "positive" : "negative")">
                                    @(tagChange.Value > 0 ? "+" : "")@tagChange.Value
                                </div>
                            </div>
                        </div>
                    }

                    @foreach (var tagChange in GetFocusTagChanges())
                    {
                        <div class="tooltip-item">
                            <div class="tooltip-item-header">
                                <div class="tooltip-item-title">
                                    <span class="tooltip-item-name">@tagChange.Key</span>
                                </div>
                            </div>
                            <div class="tooltip-item-details">
                                <div class="tooltip-detail-line @(tagChange.Value > 0 ? "positive" : "negative")">
                                    @(tagChange.Value > 0 ? "+" : "")@tagChange.Value
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        @if (Preview.NewlyActivatedTags.Count > 0)
        {
            <div class="tooltip-section">
                <h5>Newly Activated Tags</h5>
                <div class="tooltip-list">
                    @foreach (var tag in Preview.NewlyActivatedTags)
                    {
                        <div class="tooltip-item">
                            <div class="tooltip-item-header">
                                <div class="tooltip-item-title">
                                    <span class="tooltip-item-name">@tag</span>
                                </div>
                            </div>5
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>