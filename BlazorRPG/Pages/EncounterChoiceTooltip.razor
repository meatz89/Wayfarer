@inherits EncounterChoiceTooltipBase

<div class="tooltip" style="top:@tooltipYpx; left:@tooltipXpx;">
    <!-- Choice Header -->
    <div class="tooltip-header">
        <h4>@hoveredChoice.Choice.ChoiceID</h4>
    </div>

    <!-- Narrative Description -->
    <div class="tooltip-section narrative-section">
        <div class="choice-narrative">@hoveredChoice.ChoiceDescription</div>
    </div>

    <!-- Costs Section -->
    <div class="tooltip-section costs-section">
        <h5>Costs</h5>
        <div class="tooltip-item">
            <div class="resource-costs">
                @if (hoveredChoice.Choice.FocusCost > 0)
                {
                    <div class="resource-cost focus-cost">
                        <span class="resource-icon">⚡</span> @hoveredChoice.Choice.FocusCost Focus
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Effects Section -->
    <div class="tooltip-section effects-section">
        <h5>Effects</h5>
        <div class="tooltip-item">
            @{
                var projection = Preview;
                var positiveEffects = GetPositiveEffectsAsList(hoveredChoice.Choice, projection);
            }

            @if (positiveEffects.Any())
            {
                <div class="effect-list positive-effects">
                    @foreach (var effect in positiveEffects)
                    {
                        <div class="effect-item positive">
                            <span class="effect-icon">
                                if (effect.IsProgressEffect)
                                {
                                    <span>🏆</span>
                                }
                                else if (effect.IsFocusEffect)
                                {
                                    <span>⚡</span>
                                }
                                else
                                {
                                    <span>✓</span>
                                }
                            </span>
                            @effect.Description
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="effect-item neutral">No significant effects</div>
            }
        </div>
    </div>

    <!-- Skill Check Section -->
    @if (hoveredChoice.Choice.SkillOptions.Count > 0)
    {
        <div class="tooltip-section skill-section">
            <h5>Skill Check</h5>
            <div class="tooltip-item">
                <div class="skill-details">
                    <div class="skill-name">
                        @hoveredChoice.Choice.SkillOptions Check
                    </div>
                </div>
            </div>
        </div>
    }
</div>