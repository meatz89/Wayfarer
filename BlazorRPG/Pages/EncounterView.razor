@inherits EncounterViewBase

<div class="encounter-container" @onmousemove="OnMouseMove">
    @if (GameState.Actions.CurrentEncounter != null)
    {
        <div class="encounter-header">
            <h2>@GameState.Actions.CurrentEncounter.Situation</h2>
        </div>

        <div class="encounter-stats">
            <div class="stat">
                <span class="stat-label">Advantage:</span>
                <span class="stat-value">@GameState.Actions.CurrentEncounter.Context.CurrentValues.Advantage</span>
            </div>
            <div class="stat">
                <span class="stat-label">Understanding:</span>
                <span class="stat-value">@GameState.Actions.CurrentEncounter.Context.CurrentValues.Understanding</span>
            </div>
            <div class="stat">
                <span class="stat-label">Connection:</span>
                <span class="stat-value">@GameState.Actions.CurrentEncounter.Context.CurrentValues.Connection</span>
            </div>
            <div class="stat">
                <span class="stat-label">Tension:</span>
                <span class="stat-value">@GameState.Actions.CurrentEncounter.Context.CurrentValues.Tension</span>
            </div>
        </div>

        <div class="encounter-stage">
            <div class="stage-description">
                @GameManager.EncounterSystem.GetCurrentStage(GameState.Actions.CurrentEncounter).Situation
            </div>
        </div>

        <div class="encounter-choices">
            @foreach (var choice in GameState.Actions.EncounterChoiceOptions)
            {
                <div class="choice-option @(hoveredChoice == choice ? "hovered" : "") @(IsChoiceDisabled(choice) ? "disabled" : "")"
                     @onmouseover="() => ShowTooltip(choice)"
                     @onmouseout="HideTooltip"
                     @onclick="() => HandleChoiceSelection(choice)">
                    <span class="choice-index">@choice.Index.</span>
                    <span class="choice-description">@choice.Description</span>
                </div>
            }
        </div>

        @if (showTooltip && hoveredChoice != null)
        {
            <div class="tooltip" style="left: @mouseX; top: @mouseY">
                <div class="preview-container">
                    <h4>Choice Preview</h4>

                    @* Requirements *@
                    @if (hoveredChoice.EncounterChoice.ChoiceRequirements.Count > 0)
                    {
                        <div class="requirements">
                            <h5>Requirements</h5>
                            @foreach (var req in hoveredChoice.EncounterChoice.ChoiceRequirements)
                            {
                                <div class="requirement">
                                    @GetRequirementDescription(req, GameState.Player)
                                </div>
                            }
                        </div>
                    }

                    @* Permanent Costs *@
                    @if (hoveredChoice.EncounterChoice.PermanentCosts.Count > 0)
                    {
                        <div class="costs">
                            <h5>Costs</h5>
                            @foreach (var cost in hoveredChoice.EncounterChoice.PermanentCosts)
                            {
                                <div class="cost">
                                    @cost.GetDescription()
                                    @cost.GetPreview(GameState.Player)
                                </div>
                            }
                        </div>
                    }

                    @* Permanent Rewards *@
                    @if (hoveredChoice.EncounterChoice.PermanentRewards.Count > 0)
                    {
                        <div class="rewards">
                            <h5>Rewards</h5>
                            @foreach (var reward in hoveredChoice.EncounterChoice.PermanentRewards)
                            {
                                <div class="reward">
                                    @reward.GetDescription()
                                    @reward.GetPreview(GameState.Player)
                                </div>
                            }
                        </div>
                    }

                    @* Encounter Value Changes *@
                    <div class="encounter-state-changes">
                        <h5>State Changes</h5>
                        @{
                            var currentState = GameState.Actions.CurrentEncounter.Context.CurrentValues;
                            var previewState = CalculatePreviewState(currentState, hoveredChoice.EncounterChoice.EncounterValueChanges);
                        }
                        <div class="state-change @GetStateChangeClass(currentState.Advantage, previewState.Advantage)">
                            <span class="stat-label">Advantage:</span>
                            <span class="state-preview">@currentState.Advantage → @previewState.Advantage</span>
                        </div>
                        <div class="state-change @GetStateChangeClass(currentState.Understanding, previewState.Understanding)">
                            <span class="stat-label">Understanding:</span>
                            <span class="state-preview">@currentState.Understanding → @previewState.Understanding</span>
                        </div>
                        <div class="state-change @GetStateChangeClass(currentState.Connection, previewState.Connection)">
                            <span class="stat-label">Connection:</span>
                            <span class="state-preview">@currentState.Connection → @previewState.Connection</span>
                        </div>
                        <div class="state-change @GetStateChangeClass(currentState.Tension, previewState.Tension)">
                            <span class="stat-label">Tension:</span>
                            <span class="state-preview">@currentState.Tension → @previewState.Tension</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>