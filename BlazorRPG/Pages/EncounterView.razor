@inherits EncounterViewBase

<div class="encounter-container" @onmousemove="OnMouseMove">
    @if (GameState.Actions.CurrentEncounter != null)
    {
        <div class="encounter-header">
            <h2>@GameState.Actions.CurrentEncounter.Situation</h2>
        </div>

        <div class="encounter-stats">
            <div class="stat">
                <span class="stat-label">Outcome:</span>
                <span class="stat-value">@GameState.Actions.CurrentEncounter.Context.CurrentValues.Outcome</span>
            </div>
            <div class="stat">
                <span class="stat-label">Insight:</span>
                <span class="stat-value">@GameState.Actions.CurrentEncounter.Context.CurrentValues.Insight</span>
            </div>
            <div class="stat">
                <span class="stat-label">Resonance:</span>
                <span class="stat-value">@GameState.Actions.CurrentEncounter.Context.CurrentValues.Resonance</span>
            </div>
            <div class="stat">
                <span class="stat-label">Pressure:</span>
                <span class="stat-value">@GameState.Actions.CurrentEncounter.Context.CurrentValues.Pressure</span>
            </div>
        </div>

        <div class="encounter-stage">
            <div class="stage-description">
                @GameManager.EncounterSystem.GetCurrentStage(GameState.Actions.CurrentEncounter).Situation
            </div>
        </div>

        <div class="encounter-choices">
            @foreach (var choice in GameState.Actions.EncounterChoiceOptions)
            {
                <div class="choice-option @(hoveredChoice == choice ? "hovered" : "") @(IsChoiceDisabled(choice) ? "disabled" : "")"
                     @onmouseover="() => ShowTooltip(choice)"
                     @onmouseout="HideTooltip"
                     @onclick="() => HandleChoiceSelection(choice)">
                    <span class="choice-index">@choice.Index.</span>
                    <span class="choice-description">@choice.Description</span>
                </div>
            }
        </div>

        @if (showTooltip && hoveredChoice != null)
        {
            <div class="tooltip" style="left: @mouseX; top: @mouseY">
                <div class="preview-container">
                    <h4>Choice Preview</h4>

                    @* Requirements *@
                    @if (hoveredChoice.EncounterChoice.ChoiceRequirements.Count > 0)
                    {
                        <div class="requirements">
                            <h5>Requirements</h5>
                            @foreach (var req in hoveredChoice.EncounterChoice.ChoiceRequirements)
                            {
                                <div class="requirement">
                                    @GetRequirementDescription(req, GameState.Player)
                                </div>
                            }
                        </div>
                    }

                    @* Energy Costs *@
                    <div class="costs">
                        <h5>Energy Costs</h5>
                        @{
                            var energyCostPreview = CalculateEnergyCostPreview(hoveredChoice.EncounterChoice, GameState.Player, GameState.Actions.CurrentEncounter.Context.CurrentValues);
                        }
                        @foreach (var previewLine in energyCostPreview)
                        {
                            <div class="cost">
                                @((MarkupString)previewLine)
                            </div>
                        }
                    </div>

                    @* Permanent Costs *@
                    @if (hoveredChoice.EncounterChoice.PermanentCosts.Count > 0)
                    {
                        <div class="costs">
                            <h5>Permanent Costs</h5>
                            @foreach (var cost in hoveredChoice.EncounterChoice.PermanentCosts)
                            {
                                <div class="cost">
                                    @cost.GetDescription()
                                    @cost.GetPreview(GameState.Player)
                                </div>
                            }
                        </div>
                    }

                    @* Permanent Rewards *@
                    @if (hoveredChoice.EncounterChoice.PermanentRewards.Count > 0)
                    {
                        <div class="rewards">
                            <h5>Rewards</h5>
                            @foreach (var reward in hoveredChoice.EncounterChoice.PermanentRewards)
                            {
                                <div class="reward">
                                    @reward.GetDescription()
                                    @reward.GetPreview(GameState.Player)
                                </div>
                            }
                        </div>
                    }

                    @* Encounter Value Changes *@
                    <div class="encounter-state-changes">
                        <h5>State Changes</h5>
                        @{
                            var currentState = GameState.Actions.CurrentEncounter.Context.CurrentValues;
                            var previewState = CalculatePreviewState(currentState, hoveredChoice.EncounterChoice.EncounterValueChanges);
                        }
                        <div class="state-change @GetStateChangeClass(currentState.Outcome, previewState.Outcome)">
                            <span class="stat-label">Outcome:</span>
                            <span class="state-preview">@currentState.Outcome → @previewState.Outcome</span>
                        </div>
                        <div class="state-change @GetStateChangeClass(currentState.Insight, previewState.Insight)">
                            <span class="stat-label">Insight:</span>
                            <span class="state-preview">@currentState.Insight → @previewState.Insight</span>
                        </div>
                        <div class="state-change @GetStateChangeClass(currentState.Resonance, previewState.Resonance)">
                            <span class="stat-label">Resonance:</span>
                            <span class="state-preview">@currentState.Resonance → @previewState.Resonance</span>
                        </div>
                        <div class="state-change @GetStateChangeClass(currentState.Pressure, previewState.Pressure)">
                            <span class="stat-label">Pressure:</span>
                            <span class="state-preview">@currentState.Pressure → @previewState.Pressure</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>