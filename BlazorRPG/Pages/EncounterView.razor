@inherits EncounterViewBase

<div class="encounter-container" @onmousemove="OnMouseMove">
    @if (GameState.Actions.CurrentEncounter != null)
    {
        <div class="encounter-header">
            <h2>@GameState.Actions.CurrentEncounter.Situation</h2>
        </div>

        <div class="encounter-context">

            <div class="encounter-stats">
                <div class="stat">
                    @GetValueTypeIcon(ChangeTypes.Outcome)
                    <span class="stat-label">Outcome</span>
                    <span class="stat-value">@GameState.Actions.CurrentEncounter.Context.CurrentValues.Outcome</span>
                </div>
                <div class="stat">
                    @GetValueTypeIcon(ChangeTypes.Pressure)
                    <span class="stat-label">Pressure</span>
                    <span class="stat-value">@GameState.Actions.CurrentEncounter.Context.CurrentValues.Pressure</span>
                </div>
                <div class="stat">
                    @GetValueTypeIcon(ChangeTypes.Momentum)
                    <span class="stat-label">Momentum</span>
                    <span class="stat-value">@GameState.Actions.CurrentEncounter.Context.CurrentValues.Momentum</span>
                </div>
                <div class="stat">
                    @GetValueTypeIcon(ChangeTypes.Insight)
                    <span class="stat-label">Insight</span>
                    <span class="stat-value">@GameState.Actions.CurrentEncounter.Context.CurrentValues.Insight</span>
                </div>
                <div class="stat">
                    @GetValueTypeIcon(ChangeTypes.Resonance)
                    <span class="stat-label">Resonance</span>
                    <span class="stat-value">@GameState.Actions.CurrentEncounter.Context.CurrentValues.Resonance</span>
                </div>
            </div>
            <div class="encounter-stage">
                <h3 class="choice-set-name">@GameManager.EncounterSystem.GetCurrentStage(GameState.Actions.CurrentEncounter).CurrentChoiceSetName</h3>
                <div class="stage-description">
                    @GameManager.EncounterSystem.GetCurrentStage(GameState.Actions.CurrentEncounter).Situation
                </div>
            </div>

            <div class="encounter-choices">
                @foreach (var choice in GameState.Actions.CurrentChoiceOptions)
                {
                    <div class="choice-option @(IsChoiceDisabled(choice) ? "disabled" : "")"
                         @onmousemove="async (e) => await ShowTooltip(choice, e)"
                         @onmouseout="HideTooltip"
                         @onclick="() => HandleChoiceSelection(choice)">
                        <span class="choice-index">@choice.Index.</span>
                        <span class="choice-description">@choice.Description</span>
                    </div>
                }
            </div>
        </div>

        @if (showTooltip && hoveredChoice != null)
        {
            <div class="tooltip" style="left: @(mouseX)px; top: @(mouseY)px;">
                <div class="preview-header">
                    <h4>@hoveredChoice.EncounterChoice.Archetype - @hoveredChoice.EncounterChoice.Approach</h4>
                    <div class="choice-description">@hoveredChoice.Description</div>
                </div>

                @if (GetLocationEffects(hoveredChoice.EncounterChoice).Any())
                {
                    <div class="location-effects">
                        <h5>Location Effects</h5>
                        @*TODO: List the location effects*@
                    </div>
                }

                <div class="final-results">
                    <h5>Choice Results</h5>
                    <div class="value-list">
                        @foreach (DetailedChange dc in GetValueChanges(hoveredChoice.EncounterChoice))
                        {
                            <div class="value-item">
                                <div class="value-main">
                                    <div class="value-header">
                                        @GetValueTypeIcon(dc.ChangeType)
                                        <span class="value-type">@dc.ChangeType</span>
                                    </div>
                                    <span class="value-total @(dc.ChangeValues.TotalAmount >= 0 ? "positive-change" : "negative-change")">
                                        @(dc.ChangeValues.TotalAmount >= 0 ? "+" : "")@dc.ChangeValues.TotalAmount
                                    </span>
                                </div>
                                @if (dc.ChangeValues.Sources.Any())
                                {
                                    <div class="value-details">
                                        @foreach (var detail in dc.ChangeValues.Sources)
                                        {
                                            <div class="detail-line">@detail</div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                    <div class="outcomes-preview">
                        @if (hoveredChoice.EncounterChoice.Costs.Count > 0)
                        {
                            <h6>Costs</h6>
                            <ul class="outcomes-list">
                                @foreach (Outcome cost in hoveredChoice.EncounterChoice.Costs)
                                {
                                    <li class="value-item">
                                        <div class="value-main">
                                            <div class="value-header">
                                                @GetOutcomeIcon(cost)
                                                <span class="value-type">@cost.GetDescription()</span>
                                            </div>
                                            <span class="value-total">
                                            </span>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                        @if (hoveredChoice.EncounterChoice.Rewards.Count > 0)
                        {
                            <h6>Rewards</h6>
                            <ul class="outcomes-list">
                                @foreach (Outcome reward in hoveredChoice.EncounterChoice.Rewards)
                                {
                                    <li class="value-item">
                                        <div class="value-main">
                                            <div class="value-header">
                                                @GetOutcomeIcon(reward)
                                                <span class="value-type">@reward.GetDescription()</span>
                                            </div>
                                            <span class="value-total">
                                            </span>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>

<script src="js/tooltip.js"></script>