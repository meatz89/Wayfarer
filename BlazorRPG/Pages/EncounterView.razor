@inherits EncounterViewBase

<div class="encounter-container" @onmousemove="OnMouseMove">
    @if (GameState.Actions.CurrentEncounter != null)
    {
        <div class="encounter-header">
            <h2>@GameState.Actions.CurrentEncounter.Situation</h2>
        </div>

        <div class="encounter-stats">
            <div class="stat">
                <span class="stat-label">Outcome:</span>
                <span class="stat-value">@GameState.Actions.CurrentEncounter.Context.CurrentValues.Outcome</span>
            </div>
            <div class="stat">
                <span class="stat-label">Insight:</span>
                <span class="stat-value">@GameState.Actions.CurrentEncounter.Context.CurrentValues.Insight</span>
            </div>
            <div class="stat">
                <span class="stat-label">Resonance:</span>
                <span class="stat-value">@GameState.Actions.CurrentEncounter.Context.CurrentValues.Resonance</span>
            </div>
            <div class="stat">
                <span class="stat-label">Pressure:</span>
                <span class="stat-value">@GameState.Actions.CurrentEncounter.Context.CurrentValues.Pressure</span>
            </div>
        </div>

        <div class="encounter-stage">
            <div class="stage-description">
                @GameManager.EncounterSystem.GetCurrentStage(GameState.Actions.CurrentEncounter).Situation
            </div>
        </div>

        <div class="encounter-choices">
            @foreach (var choice in GameState.Actions.EncounterChoiceOptions)
            {
                <div class="choice-option @(hoveredChoice == choice ? "hovered" : "") @(IsChoiceDisabled(choice) ? "disabled" : "")"
                     @onmouseover="() => ShowTooltip(choice)"
                     @onmouseout="HideTooltip"
                     @onclick="() => HandleChoiceSelection(choice)">
                    <span class="choice-index">@choice.Index.</span>
                    <span class="choice-description">@choice.Description</span>
                </div>
            }
        </div>

        @if (showTooltip && hoveredChoice != null)
        {
            <div class="tooltip" style="left: @mouseX; top: @mouseY">
                <div class="preview-container">
                    <div class="preview-header">
                        <h4>@hoveredChoice.Description</h4>
                        <div class="choice-type">@hoveredChoice.EncounterChoice.Archetype - @hoveredChoice.EncounterChoice.Approach</div>
                    </div>

                    @* Base Effects Section *@
                    <div class="value-section">
                        <h5>Base Effects:</h5>
                        <div class="value-list">
                            @foreach (var baseChange in hoveredChoice.EncounterChoice.BaseValueChanges)
                            {
                                <div class="value-item">
                                    @GetValueTypeIcon(baseChange.ValueType)
                                    <span>@baseChange.ValueType @(baseChange.Change > 0 ? "+" : "")@baseChange.Change</span>
                                </div>
                            }
                            <div class="value-item">
                                @GetEnergyTypeIcon(hoveredChoice.EncounterChoice.EnergyType)
                                <span>@hoveredChoice.EncounterChoice.EnergyCost @hoveredChoice.EncounterChoice.EnergyType Energy</span>
                            </div>
                        </div>
                    </div>

                    @* Location Transformations *@
                    <div class="location-effects">
                        <h5>@GameState.World.CurrentLocation Effects:</h5>
                        <div class="transformations">
                            @foreach (var rule in GetLocationTransformationRules())
                            {
                                <div class="transformation">
                                    <span class="transform-icon">→</span>
                                    <span>@rule</span>
                                </div>
                            }
                        </div>
                    </div>

                    @* Final Results Section *@
                    <div class="final-results">
                        <h5>Final Results:</h5>
                        <div class="value-list">
                            @foreach (var valueChange in hoveredChoice.EncounterChoice.ModifiedValueChanges)
                            {
                                <div class="value-item">
                                    @GetValueTypeIcon(valueChange.ValueType)
                                    <span class="value-result">
                                        @valueChange.ValueType @(valueChange.Change > 0 ? "+" : "")@valueChange.Change
                                        <span class="value-breakdown">
                                            @* Display base and modifications *@
                                            (Base: @(hoveredChoice.EncounterChoice.BaseValueChanges.FirstOrDefault(b => b.ValueType == valueChange.ValueType)?.Change ?? 0)
                                            @foreach (var mod in hoveredChoice.EncounterChoice.Modifications.Where(m => m.Type == ModificationType.ValueChange && m.ValueChange.ValueType == valueChange.ValueType))
                                            {
                                                @if (mod.ValueChange.ValueTransformation is ChangeValueTransformation changeTransformation)
                                                {
                                                    @(", " + mod.Source + ": " + (changeTransformation.ChangeInValue > 0 ? "+" : "") + changeTransformation.ChangeInValue)
                                                }
                                                else if (mod.ValueChange.ValueTransformation is ConvertValueTransformation)
                                                {
                                                    @(", " + mod.Source + ": Convert")
                                                }
                                                else if (mod.ValueChange.ValueTransformation is CancelValueTransformation)
                                                {
                                                    @(", " + mod.Source + ": Cancel")
                                                }
                                            }
                                            )
                                        </span>
                                    </span>
                                </div>
                            }
                            @{
                                var finalEnergy = CalculateFinalEnergyCost(hoveredChoice.EncounterChoice);
                            }
                            <div class="value-item">
                                @GetEnergyTypeIcon(hoveredChoice.EncounterChoice.EnergyType)
                                <span>
                                    @finalEnergy.FinalCost @hoveredChoice.EncounterChoice.EnergyType Energy
                                    @if (finalEnergy.Reduction > 0)
                                    {
                                        <span class="value-breakdown">(reduced from @(finalEnergy.FinalCost + finalEnergy.Reduction))</span>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>