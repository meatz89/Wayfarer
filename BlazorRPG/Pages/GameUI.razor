@page "/"
@inherits ComponentBase

<div class="game-container @(OngoingEncounter ? "encounter-active" : "")">
    @if (needsCharacterCreation)
    {
        <CharacterCreation IsVisible="true" OnCharacterCreated="HandleCharacterCreated" />
    }
    else
    {
        <!-- Add tutorial objective at the top of the screen when in tutorial mode -->
        <div class="game-status-bar">
            @if (GameState.GameMode == Modes.Tutorial)
            {
                <TutorialObjective />
            }
        </div>

        <!-- Status Bar for all modes -->
        <div class="game-status-bar">
            <div class="player-status">
                <div class="status-item">
                    <span class="status-icon">❤️</span>
                    <span class="status-label">Health</span>
                    <span class="status-value @(PlayerState.Health < PlayerState.MaxHealth / 3 ? "danger" : "")">
                        @PlayerState.Health / @PlayerState.MaxHealth
                    </span>
                </div>
                <div class="status-item">
                    <span class="status-icon">🧠</span>
                    <span class="status-label">Concentration</span>
                    <span class="status-value">
                        @PlayerState.Concentration / @PlayerState.MaxConcentration
                    </span>
                </div>
                <div class="status-item">
                    <span class="status-icon">🗣️</span>
                    <span class="status-label">Confidence</span>
                    <span class="status-value">
                        @PlayerState.Confidence / @PlayerState.MaxConfidence
                    </span>
                </div>
                <div class="status-item">
                    <span class="status-icon">⚡</span>
                    <span class="status-label">Energy</span>
                    <span class="status-value">
                        @PlayerState.Energy / @PlayerState.MaxEnergy
                    </span>
                </div>
            </div>

            <div class="game-info">
                <div class="time-display">
                    <span class="time-icon">@GetIconForTimeWindow(CurrentTime)</span>
                    <span class="time-text">@CurrentTime.ToString()</span>
                    <span class="time-hours">@CurrentHour:00</span>
                </div>
            </div>
        </div>

        <div class="game-content">
            <!-- Main content area -->
            <div class="main-content">
                @if (OngoingEncounter)
                {
                    <EncounterView OnEncounterCompleted="(result) => OnEncounterCompleted(result)" />
                }
                else
                {
                    @if (showAreaMap)
                    {
                        @if (showNarrative)
                        {
                            <NarrativeView LocationName="@selectedLocation"
                                           OnNarrativeCompleted="OnNarrativeCompleted"
                                           Result="@EncounterResult"
                                           ShowResult="false" />
                        }
                        else if (ShowEncounterResult)
                        {
                            <NarrativeView LocationName="@selectedLocation"
                                           OnNarrativeCompleted="OnNarrativeCompleted"
                                           Result="@EncounterResult"
                                           ShowResult="true" />
                        }
                        else
                        {
                            <div class="location-container">
                                <div class="location-header">
                                    <h2 class="location-title">@GetCurrentLocation().Name</h2>
                                    <div class="location-actions">
                                        <button class="location-button" @onclick="@SwitchAreaMap">
                                            Travel 🗺️
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="map-container">
                                <AreaMap CurrentLocation="@GetCurrentLocation()"
                                         Locations="@Locations"
                                         OnTravel="@HandleTravelStart" />
                            </div>
                        }
                    }
                    else if (ShowEncounterResult)
                    {
                        <NarrativeView LocationName="@selectedLocation"
                                        OnNarrativeCompleted="OnNarrativeCompleted"
                                        Result="@EncounterResult"
                                        ShowResult="true" />
                    }
                    else
                    {
                        <div class="location-container">
                            <div class="location-header">
                                <h2 class="location-title">@GetCurrentLocation().Name</h2>
                                <div class="location-actions">
                                    <button class="location-button" @onclick="WaitOneHour">
                                        Wait 1 Hour
                                    </button>
                                    <button class="location-button" @onclick="@SwitchAreaMap">
                                        Travel 🗺️
                                    </button>
                                </div>
                            </div>

                            <LocationSpotMap CurrentLocation="@GetCurrentLocation()"
                                                CurrentSpot="@CurrentSpot"
                                                OnSpotSelected="@HandleSpotSelection"
                                                OnActionSelected="@HandleActionSelection" />
                        </div>
                        }
                    }
                }
            </div>

            <!-- Side panel - Only shown when not in encounter -->
            @if (!OngoingEncounter)
            {
                <div class="game-sidebar">
                    <div class="sidebar-section">
                        <div class="section-header">Location Info</div>
                        <div class="properties-grid">
                            @foreach (var prop in GetLocationProperties(GetCurrentLocation()))
                            {
                                <div class="property-tag @prop.CssClass">
                                    <span class="property-icon">@prop.Icon</span>
                                    <span class="property-text">@prop.Text</span>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="sidebar-section">
                        <div class="section-header">Archetype</div>
                        <div class="player-archetype">
                            <span class="archetype-icon">@GetArchetypeIcon(PlayerState.Archetype)</span>
                            <span class="archetype-name">@PlayerState.Archetype</span>
                        </div>
                    </div>

                    <div class="sidebar-section">
                        <div class="section-header">Resources</div>
                        <div class="resource-grid">
                            <div class="player-resource">
                                <span class="resource-icon" style="color: var(--resource-coins)">💰</span>
                                <span class="resource-label">Coins</span>
                                <span class="resource-value">@PlayerState.Coins</span>
                            </div>
                            <TutorialHighlight IsHighlighted="@(GameState.GameMode == Modes.Tutorial && GameState.TutorialState.CheckFlag("GatheredFood") && !GameState.TutorialState.CheckFlag("TutorialFoodExplained"))"
                                               Title="Food Resource"
                                               Description="Food can be consumed to restore Energy. You need Energy to travel and perform actions.">
                                <div class="player-resource">
                                    <span class="resource-icon" style="color: var(--resource-food)">🍖</span>
                                    <span class="resource-label">Food</span>
                                    <span class="resource-value">@PlayerState.Food</span>
                                    @if (PlayerState.Food > 0)
                                    {
                                        <button class="resource-use-btn" @onclick="() => UseResource(ActionNames.ConsumeFood)">Use</button>
                                    }
                                </div>
                            </TutorialHighlight>

                            <TutorialHighlight IsHighlighted="@(GameState.GameMode == Modes.Tutorial && GameState.TutorialState.CheckFlag("GatheredHerbs") && !GameState.TutorialState.CheckFlag("TutorialHerbsExplained"))"
                                               Title="Medicinal Herbs"
                                               Description="Herbs can be used to restore Health, Concentration, and Confidence. These resources are depleted during encounters.">
                                <div class="player-resource">
                                    <span class="resource-icon" style="color: var(--resource-herbs, #606C38)">🌿</span>
                                    <span class="resource-label">Herbs</span>
                                    <span class="resource-value">@PlayerState.MedicinalHerbs</span>
                                    @if (PlayerState.MedicinalHerbs > 0)
                                    {
                                        <button class="resource-use-btn" @onclick="() => UseResource(ActionNames.ConsumeMedicinalHerbs)">Use</button>
                                    }
                                </div>
                            </TutorialHighlight>
                        </div>
                    </div>

                    <div class="sidebar-section">
                        <div class="section-header">Inventory (@PlayerState.Inventory.UsedCapacity / @PlayerState.Inventory.MaxCapacity)</div>
                        <div class="inventory-grid">
                            @foreach (ItemTypes itemType in Enum.GetValues(typeof(ItemTypes)))
                            {
                                if (itemType != ItemTypes.None)
                                {
                                    int count = PlayerState.Inventory.GetItemCount(itemType.ToString());
                                    if (count > 0)
                                    {
                                        <div class="inventory-item" title="@GetItemDescription(itemType)">
                                            <span class="item-icon">@GetItemIcon(itemType)</span>
                                            <span class="item-name">@FormatItemName(itemType)</span>
                                            <span class="item-count">@count</span>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>

                    @if (PlayerState.NegativeStatusTypes != null && PlayerState.NegativeStatusTypes.Any())
                    {
                        <div class="sidebar-section">
                            <div class="section-header">Status Effects</div>
                            <div class="status-effects-grid">
                                @foreach (var status in PlayerState.NegativeStatusTypes)
                                {
                                    <div class="status-effect negative">
                                        <span class="status-icon">⚠️</span>
                                        <span class="status-name">@status</span>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>

@if (showTooltip && hoveredAction != null)
{
    <div class="tooltip" style="left: @(mouseX + 10)px; top: @(mouseY + 10)px">
        <ActionPreview CurrentAction="@hoveredAction"
                       Player="@Player" />
    </div>
}

@if (showActionMessage)
{
    <div class="action-message @(actionMessageType)">
        <div class="message-content">
            @foreach (var message in actionMessages)
            {
                <div class="message-item">@message</div>
            }
        </div>
        <button class="message-close" @onclick="DismissActionMessage">✕</button>
    </div>
}