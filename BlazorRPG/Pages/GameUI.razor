@page "/"
@inherits ComponentBase

<div class="top-bar">
</div>

<div class="game-container @(OngoingEncounter ? "encounter-active" : "")">
    @if (needsCharacterCreation)
    {
        <CharacterCreation IsVisible="true" OnCharacterCreated="HandleCharacterCreated" />
    }
    else
    {
        <div class="map-container">
            @if (OngoingEncounter)
            {
                <EncounterView OnEncounterCompleted="(result) => OnEncounterCompleted(result)" />
            }
            else
            {
                @if (showAreaMap)
                {
                    @if (showNarrative)
                    {
                        <NarrativeView LocationName="@selectedLocation"
                                       OnNarrativeCompleted="OnNarrativeCompleted"
                                       Result="@EncounterResult"
                                       ShowResult="false" />
                    }
                    else if (ShowEncounterResult)
                    {
                        <NarrativeView LocationName="@selectedLocation"
                                       OnNarrativeCompleted="OnNarrativeCompleted"
                                       Result="@EncounterResult"
                                       ShowResult="true" />
                    }
                    else
                    {
                        <AreaMap CurrentLocation="@GetCurrentLocation()"
                                 Locations="@Locations"
                                 OnTravel="@HandleTravelStart" />
                    }
                }
                else
                {
                    if (ShowEncounterResult)
                    {
                        <NarrativeView LocationName="@selectedLocation"
                                       OnNarrativeCompleted="OnNarrativeCompleted"
                                       Result="@EncounterResult"
                                       ShowResult="true" />
                    }
                    else
                    {
                        <LocationSpotMap CurrentLocation="@GetCurrentLocation()"
                                         CurrentSpot="@CurrentSpot"
                                         OnSpotSelected="@HandleSpotSelection"
                                         OnActionSelected="@HandleActionSelection" />
                    }
                }
            }
        </div>

        @if (!OngoingEncounter)
        {
            <div class="sidebar">
                <div class="sidebar-panel location-panel">
                    <div class="location">
                        <div class="location-name">
                            @GetCurrentLocation().Name
                        </div>
                        <div class="map-toggle">
                            <button class="toggle-button @(showAreaMap ? "active" : "")" @onclick="@SwitchAreaMap">
                                Travel 🗺️
                            </button>
                        </div>

                        <button class="wait-button" @onclick="WaitOneHour">
                            Wait 1 Hour
                        </button>
                    </div>

                    <div class="location-properties">
                        <div class="properties-header">Location Info</div>
                        <div class="time-display">
                            <span class="time-icon">@GetIconForTimeWindow(CurrentTime)</span>
                            <span class="time-text">@CurrentTime.ToString()</span>
                            <span class="time-hours">@CurrentHour:00</span>
                        </div>

                        <div class="properties-grid">
                            @foreach (var prop in GetLocationProperties(GetCurrentLocation()))
                            {
                                <div class="property-tag @prop.CssClass">
                                    <span class="property-icon">@prop.Icon</span>
                                    <span class="property-text">@prop.Text</span>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="player-panel">
                        <div class="panel-content">
                            <!-- Player info content remains unchanged -->
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@if (showTooltip && hoveredAction != null)
{
    <div class="tooltip" style="left: @(mouseX + 10)px; top: @(mouseY + 10)px">
        <ActionPreview CurrentAction="@hoveredAction"
                       Player="@Player" />
    </div>
}

@if (showActionMessage)
{
    <div class="action-message @(actionMessageType)">
        <div class="message-content">
            @foreach (var message in actionMessages)
            {
                <div class="message-item">@message</div>
            }
        </div>
        <button class="message-close" @onclick="DismissActionMessage">✕</button>
    </div>
}