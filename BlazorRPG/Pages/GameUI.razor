@page "/"
@inherits ComponentBase

<div class="top-bar">
</div>

<div class="game-container">
    @if (needsCharacterCreation)
    {
        <CharacterCreation IsVisible="true" OnCharacterCreated="HandleCharacterCreated" />
    }
    else
    {
        <div class="map-container">
            <div class="map-toggle">
                <button class="toggle-button @(showAreaMap ? "active" : "")" @onclick="() => showAreaMap = true">
                    Travel 🗺️
                </button>
            </div>
            @if (OngoingEncounter)
            {
                <EncounterView OnEncounterCompleted="(result) => HandleEncounterCompleted(result)" />
            }
            else
            {
                @if (showAreaMap)
                {
                    @if (showNarrative)
                    {
                        <NarrativeView LocationName="@selectedLocation"
                                       OnNarrativeCompleted="OnNarrativeCompleted"
                                       Result="@EncounterResult"
                                       ShowResult="false" />
                    }
                    else if (ShowEncounterResult)
                    {
                        <NarrativeView LocationName="@selectedLocation"
                                       OnNarrativeCompleted="OnNarrativeCompleted"
                                       Result="@EncounterResult"
                                       ShowResult="true" />
                    }
                    else
                    {
                        <AreaMap CurrentLocation="@GetCurrentLocation()"
                                 Locations="@Locations"
                                 OnTravel="@HandleTravelStart" />
                    }
                }
                else
                {
                    if (ShowEncounterResult)
                    {
                        <NarrativeView LocationName="@selectedLocation"
                                       OnNarrativeCompleted="OnNarrativeCompleted"
                                       Result="@EncounterResult"
                                       ShowResult="true" />
                    }
                    else
                    {
                        <LocationSpotMap CurrentLocation="@GetCurrentLocation()"
                                         CurrentSpot="@CurrentSpot"
                                         OnSpotSelected="@HandleSpotSelection"
                                         OnActionSelected="@HandleActionSelection" />
                    }
                }
            }
        </div>

        <div class="sidebar">
            <div class="sidebar-panel location-panel">
                <div class="location-name">
                    @GetCurrentLocation().Name
                </div>

                <div class="time-display">
                    @CurrentHour:00
                    @CurrentTime @GetIconForTimeWindow(@GameState.WorldState.WorldTime)
                </div>

                
            <div class="location-properties">
                <div class="properties-header">Properties</div>
                <div class="properties-grid">
                    @foreach (var prop in GetLocationProperties(GetCurrentLocation()))
                    {
                        <div class="property-tag @prop.CssClass">
                            <span class="property-icon">@prop.Icon</span>
                            <span class="property-text">@prop.Text</span>
                        </div>
                    }
                </div>
            </div>

            <div class="sidebar-panel player-panel">
                <div class="panel-title">Character Stats</div>
                <div class="panel-content">
                    
                    <!-- Archetype -->
                    <div class="properties-header">Archetype</div>
                    <div class="player-archetype">
                        <span class="archetype-icon">@GetArchetypeIcon(PlayerState.Archetype)</span>
                        <span class="archetype-name">@PlayerState.Archetype</span>
                    </div>

                    <!-- Core Stats -->
                    <div class="properties-header">Status</div>
                    <div class="stat-grid">
                        <div class="player-stat">
                            <span class="stat-icon">❤️</span>
                            <span class="stat-label">Health</span>
                            <span class="stat-value @(PlayerState.Health < PlayerState.MaxHealth / 3 ? "danger" : "")">
                                @PlayerState.Health / @PlayerState.MaxHealth
                            </span>
                        </div>
                        <div class="player-stat">
                            <span class="stat-icon">🧠</span>
                            <span class="stat-label">Concentration</span>
                            <span class="stat-value">
                                @PlayerState.Concentration / @PlayerState.MaxConcentration
                            </span>
                        </div>
                        <div class="player-stat">
                            <span class="stat-icon">🗣️</span>
                            <span class="stat-label">Confidence</span>
                            <span class="stat-value">
                                @PlayerState.Confidence / @PlayerState.MaxConfidence
                            </span>
                        </div>
                        <div class="player-stat">
                            <span class="stat-icon">⚡</span>
                            <span class="stat-label">Energy</span>
                            <span class="stat-value @(PlayerState.Energy < PlayerState.MaxEnergy / 3 ? "danger" : "")">
                                @PlayerState.Energy / @PlayerState.MaxEnergy
                            </span>
                        </div>
                    </div>

                    <!-- Resources -->
                    <div class="properties-header">Resources</div>
                    <div class="resource-grid">
                        <div class="player-resource">
                            <span class="resource-icon" style="color: var(--resource-coins)">💰</span>
                            <span class="resource-label">Coins</span>
                            <span class="resource-value">@PlayerState.Coins</span>
                        </div>
                        <div class="player-resource">
                            <span class="resource-icon" style="color: var(--resource-food)">🍖</span>
                            <span class="resource-label">Food</span>
                            <span class="resource-value">@PlayerState.Food</span>
                        </div>
                    </div>

                    <!-- Inventory -->
                    <div class="properties-header">Inventory (@PlayerState.Inventory.UsedCapacity / @PlayerState.Inventory.MaxCapacity)</div>
                    <div class="inventory-grid">
                        @foreach (ItemTypes itemType in Enum.GetValues(typeof(ItemTypes)))
                        {
                            if (itemType != ItemTypes.None)
                            {
                                int count = PlayerState.Inventory.GetItemCount(itemType);
                                if (count > 0)
                                {
                                    <div class="inventory-item" title="@GetItemDescription(itemType)">
                                        <span class="item-icon">@GetItemIcon(itemType)</span>
                                        <span class="item-name">@FormatItemName(itemType)</span>
                                        <span class="item-count">@count</span>
                                    </div>
                                }
                            }
                        }
                    </div>

                    <!-- Status Effects -->
                    @if (PlayerState.NegativeStatusTypes != null && PlayerState.NegativeStatusTypes.Any())
                    {
                        <div class="properties-header">Status Effects</div>
                        <div class="status-effects-grid">
                            @foreach (var status in PlayerState.NegativeStatusTypes)
                            {
                                <div class="status-effect negative">
                                    <span class="status-icon">⚠️</span>
                                    <span class="status-name">@status</span>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    }
</div>

@if (showTooltip && hoveredAction != null)
{
    <div class="tooltip" style="left: @(mouseX + 10)px; top: @(mouseY + 10)px">
        <ActionPreview CurrentAction="@hoveredAction"
                       Player="@Player" />
    </div>
}