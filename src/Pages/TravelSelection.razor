@inherits TravelSelectionBase
@using Wayfarer.Services
@using Wayfarer.Pages.Components

@namespace Wayfarer.Pages

@* Use the simplified travel UI component *@
<SimpleTravelUI Context="@TravelContext"
                Destinations="@Destinations"
                OnSelectRoute="@HandleTravelRoute"
                OnBackToLocation="@HandleBackToLocation" />

@* Simple deadline warning inline (no modal) *@
@if (ShowDeadlineWarning && PendingTimeImpact != null)
{
    <div class="deadline-warning-overlay">
        <div class="deadline-warning-box">
            <h4>Deadline Warning</h4>
            <p>@PendingTimeImpact.LettersExpiring letter(s) will expire if you travel.</p>
            <div class="warning-actions">
                <button class="warning-button confirm" @onclick="ConfirmTravelWithDeadline">Continue Anyway</button>
                <button class="warning-button cancel" @onclick="CancelTravelWithDeadline">Cancel Travel</button>
            </div>
        </div>
    </div>
}


