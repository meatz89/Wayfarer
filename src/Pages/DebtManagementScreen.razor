@page "/debts"
@inject IGameFacade GameFacade

<div class="debt-management-container">
    <div class="debt-header">
        <h2>Debt Management</h2>
        <p class="debt-subtitle">Track loans, interest, and repayment obligations</p>
    </div>

    @if (!ActiveDebts.Any())
    {
        <div class="no-debts">
            <i class="bi bi-wallet2"></i>
            <p>You have no outstanding debts.</p>
            <small>Borrow money from merchants when you need emergency funds.</small>
        </div>
    }
    else
    {
        <div class="debt-summary">
            <div class="summary-card">
                <h4>Total Debt</h4>
                <span class="total-amount">@TotalDebt coins</span>
            </div>
            <div class="summary-card">
                <h4>Daily Interest</h4>
                <span class="interest-amount">@TotalDailyInterest coins/day</span>
            </div>
            <div class="summary-card">
                <h4>Available Coins</h4>
                <span class="available-amount">@PlayerCoins coins</span>
            </div>
        </div>

        <div class="debt-list">
            @foreach (var debt in ActiveDebts)
            {
                <div class="debt-card @GetDebtUrgencyClass(debt)">
                    <div class="debt-info">
                        <div class="creditor-info">
                            <h3>@debt.CreditorName</h3>
                            <span class="debt-age">Borrowed @debt.DaysActive days ago</span>
                        </div>
                        
                        <div class="debt-amounts">
                            <div class="amount-row">
                                <span class="label">Principal:</span>
                                <span class="value">@debt.Principal coins</span>
                            </div>
                            <div class="amount-row">
                                <span class="label">Interest (@debt.InterestRate%/day):</span>
                                <span class="value">@debt.AccruedInterest coins</span>
                            </div>
                            <div class="amount-row total">
                                <span class="label">Total Owed:</span>
                                <span class="value">@debt.TotalOwed coins</span>
                            </div>
                        </div>

                        @if (debt.TokenDebt > 0)
                        {
                            <div class="token-impact">
                                <i class="bi bi-exclamation-triangle"></i>
                                <span>Debt creating -@debt.TokenDebt Commerce tokens leverage</span>
                            </div>
                        }
                    </div>

                    <div class="debt-actions">
                        @if (CanRepayPartial(debt))
                        {
                            <button class="btn-repay-partial" @onclick="() => ShowPartialRepayment(debt)">
                                Partial Payment
                            </button>
                        }
                        @if (CanRepayFull(debt))
                        {
                            <button class="btn-repay-full" @onclick="() => RepayFullDebt(debt)">
                                Repay Full (@debt.TotalOwed coins)
                            </button>
                        }
                        else
                        {
                            <span class="insufficient-funds">Need @(debt.TotalOwed - PlayerCoins) more coins</span>
                        }
                    </div>

                    @if (debt.DaysActive > 7)
                    {
                        <div class="overdue-warning">
                            <i class="bi bi-clock-history"></i>
                            <span>Overdue! Interest accumulating rapidly.</span>
                        </div>
                    }
                </div>
            }
        </div>
    }

    <div class="borrowing-section">
        <h3>Available Loans</h3>
        @if (AvailableLenders.Any())
        {
            <div class="lender-list">
                @foreach (var lender in AvailableLenders)
                {
                    <div class="lender-card">
                        <div class="lender-info">
                            <h4>@lender.Name</h4>
                            <span class="lender-location">@lender.LocationName</span>
                        </div>
                        <div class="loan-terms">
                            <span>Max Loan: @lender.MaxLoanAmount coins</span>
                            <span>Interest: @lender.InterestRate%/day</span>
                        </div>
                        @if (IsNearby(lender))
                        {
                            <button class="btn-borrow" @onclick="() => ShowBorrowDialog(lender)">
                                Negotiate Loan
                            </button>
                        }
                        else
                        {
                            <span class="not-nearby">Visit @lender.LocationName to borrow</span>
                        }
                    </div>
                }
            </div>
        }
        else
        {
            <p class="no-lenders">No merchants willing to lend at this time.</p>
        }
    </div>

    @if (ShowBorrowingDialog)
    {
        <div class="modal-overlay" @onclick="CloseBorrowDialog">
            <div class="borrow-dialog" @onclick:stopPropagation="true">
                <h3>Borrow from @SelectedLender.Name</h3>
                <div class="loan-calculator">
                    <label>
                        Amount to borrow:
                        <input type="number" min="10" max="@SelectedLender.MaxLoanAmount" 
                               @bind="BorrowAmount" @bind:event="oninput" />
                    </label>
                    <div class="loan-preview">
                        <p>Daily Interest: @CalculateDailyInterest() coins</p>
                        <p>Total after 7 days: @CalculateProjectedDebt(7) coins</p>
                    </div>
                </div>
                <div class="dialog-actions">
                    <button class="btn-cancel" @onclick="CloseBorrowDialog">Cancel</button>
                    <button class="btn-confirm" @onclick="ConfirmBorrow" 
                            disabled="@(BorrowAmount < 10 || BorrowAmount > SelectedLender.MaxLoanAmount)">
                        Borrow @BorrowAmount coins
                    </button>
                </div>
            </div>
        </div>
    }

    @if (ShowRepaymentDialog)
    {
        <div class="modal-overlay" @onclick="CloseRepaymentDialog">
            <div class="repay-dialog" @onclick:stopPropagation="true">
                <h3>Partial Payment to @SelectedDebt.CreditorName</h3>
                <div class="repay-info">
                    <p>Total Owed: @SelectedDebt.TotalOwed coins</p>
                    <p>Your Coins: @PlayerCoins coins</p>
                </div>
                <div class="repay-calculator">
                    <label>
                        Amount to repay:
                        <input type="number" min="1" max="@Math.Min(PlayerCoins, SelectedDebt.TotalOwed)" 
                               @bind="RepayAmount" @bind:event="oninput" />
                    </label>
                    <div class="repay-preview">
                        <p>Remaining Debt: @(SelectedDebt.TotalOwed - RepayAmount) coins</p>
                    </div>
                </div>
                <div class="dialog-actions">
                    <button class="btn-cancel" @onclick="CloseRepaymentDialog">Cancel</button>
                    <button class="btn-confirm" @onclick="ConfirmPartialRepayment" 
                            disabled="@(RepayAmount < 1 || RepayAmount > Math.Min(PlayerCoins, SelectedDebt.TotalOwed))">
                        Pay @RepayAmount coins
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private DebtViewModel DebtData = new();
    
    private bool ShowBorrowingDialog;
    private LenderInfo SelectedLender;
    private int BorrowAmount = 50;
    
    private bool ShowRepaymentDialog;
    private DebtInfo SelectedDebt;
    private int RepayAmount = 10;

    protected override void OnInitialized()
    {
        RefreshDebtData();
    }

    private void RefreshDebtData()
    {
        DebtData = GameFacade.GetDebtInformation();
        StateHasChanged();
    }
    
    private List<DebtInfo> ActiveDebts => DebtData.ActiveDebts;
    private List<LenderInfo> AvailableLenders => DebtData.AvailableLenders;
    private int PlayerCoins => DebtData.PlayerCoins;
    private int TotalDebt => DebtData.TotalDebt;
    private int TotalDailyInterest => DebtData.TotalDailyInterest;

    private bool CanRepayPartial(DebtInfo debt)
    {
        return PlayerCoins >= 10 && PlayerCoins < debt.TotalOwed;
    }

    private bool CanRepayFull(DebtInfo debt)
    {
        return PlayerCoins >= debt.TotalOwed;
    }

    private bool IsNearby(LenderInfo lender)
    {
        return lender.IsAvailable;
    }

    private string GetDebtUrgencyClass(DebtInfo debt)
    {
        if (debt.DaysActive > 14) return "debt-critical";
        if (debt.DaysActive > 7) return "debt-overdue";
        if (debt.TotalOwed > 200) return "debt-high";
        return "debt-normal";
    }

    private void ShowBorrowDialog(LenderInfo lender)
    {
        SelectedLender = lender;
        BorrowAmount = Math.Min(50, lender.MaxLoanAmount);
        ShowBorrowingDialog = true;
    }

    private void CloseBorrowDialog()
    {
        ShowBorrowingDialog = false;
        SelectedLender = null;
    }

    private int CalculateDailyInterest()
    {
        if (SelectedLender == null) return 0;
        return (int)(BorrowAmount * SelectedLender.InterestRate / 100.0);
    }

    private int CalculateProjectedDebt(int days)
    {
        if (SelectedLender == null) return BorrowAmount;
        return BorrowAmount + (int)(BorrowAmount * SelectedLender.InterestRate * days / 100.0);
    }

    private async Task ConfirmBorrow()
    {
        if (SelectedLender != null && BorrowAmount >= 10)
        {
            var success = await GameFacade.BorrowMoneyAsync(SelectedLender.NPCId);
            if (success)
            {
                RefreshDebtData();
                CloseBorrowDialog();
            }
        }
    }

    private void ShowPartialRepayment(DebtInfo debt)
    {
        SelectedDebt = debt;
        RepayAmount = Math.Min(PlayerCoins, Math.Min(50, debt.TotalOwed));
        ShowRepaymentDialog = true;
    }

    private void CloseRepaymentDialog()
    {
        ShowRepaymentDialog = false;
        SelectedDebt = null;
    }

    private async Task ConfirmPartialRepayment()
    {
        if (SelectedDebt != null && RepayAmount >= 1)
        {
            await RepayDebt(SelectedDebt, RepayAmount);
            CloseRepaymentDialog();
        }
    }

    private async Task RepayFullDebt(DebtInfo debt)
    {
        await RepayDebt(debt, debt.TotalOwed);
    }

    private async Task RepayDebt(DebtInfo debt, int amount)
    {
        var success = await GameFacade.RepayDebtAsync(debt.CreditorId, amount);
        if (success)
        {
            RefreshDebtData();
        }
    }

}

