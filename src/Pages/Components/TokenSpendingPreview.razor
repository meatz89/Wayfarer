@inject ConnectionTokenManager TokenManager
@inject NPCRepository NPCRepository

@if (IsVisible)
{
    <div class="token-spending-preview @(IsAnimating ? "animating" : "")">
        <div class="preview-header">
            <h4>Spending Tokens</h4>
            <span class="close-button" @onclick="Hide">√ó</span>
        </div>
        
        @if (CurrentNPC != null && TokenType.HasValue)
        {
            <div class="preview-content">
                <div class="spending-details">
                    <div class="token-visual">
                        <span class="token-icon large">@GetTokenIcon(TokenType.Value)</span>
                        <span class="token-amount">-@Amount</span>
                    </div>
                    
                    <div class="relationship-info">
                        <div class="npc-name">@CurrentNPC.Name</div>
                        <div class="current-tokens">
                            Current: @CurrentTokens ‚Üí @(CurrentTokens - Amount) @TokenType tokens
                        </div>
                        @if (CurrentTokens - Amount < 0)
                        {
                            <div class="debt-warning">
                                ‚ö†Ô∏è You will owe @CurrentNPC.Name @Math.Abs(CurrentTokens - Amount) @TokenType tokens
                            </div>
                        }
                    </div>
                </div>
                
                <div class="context-explanation">
                    <p>üí≠ <em>@GetContextualExplanation()</em></p>
                </div>
                
                <div class="consequence-warning">
                    <h5>Consequences:</h5>
                    <ul>
                        <li>@CurrentNPC.Name will trust you less</li>
                        @if (CurrentTokens - Amount < 3)
                        {
                            <li>May no longer offer @TokenType letters</li>
                        }
                        @if (CurrentTokens - Amount < 0)
                        {
                            <li>You'll need to rebuild trust before asking more favors</li>
                        }
                    </ul>
                </div>
            </div>
        }
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public NPC? CurrentNPC { get; set; }
    [Parameter] public ConnectionType? TokenType { get; set; }
    [Parameter] public int Amount { get; set; }
    [Parameter] public string Context { get; set; } = "";
    
    private bool IsAnimating = false;
    private int CurrentTokens => CurrentNPC != null && TokenType.HasValue 
        ? TokenManager.GetTokensWithNPC(CurrentNPC.ID).GetValueOrDefault(TokenType.Value) 
        : 0;
    
    protected override void OnParametersSet()
    {
        if (IsVisible && !IsAnimating)
        {
            IsAnimating = true;
            StateHasChanged();
        }
    }
    
    private void Hide()
    {
        IsAnimating = false;
        StateHasChanged();
        Task.Delay(300).ContinueWith(_ => 
        {
            IsVisible = false;
            InvokeAsync(StateHasChanged);
        });
    }
    
    private string GetTokenIcon(ConnectionType type)
    {
        return type switch
        {
            ConnectionType.Trust => "üíö",
            ConnectionType.Trade => "üíô",
            ConnectionType.Noble => "üíú",
            ConnectionType.Common => "ü§é",
            ConnectionType.Shadow => "üñ§",
            _ => "‚ùì"
        };
    }
    
    private string GetContextualExplanation()
    {
        return Context switch
        {
            "route_discovery" => $"You're asking {CurrentNPC?.Name} to share secret knowledge about routes. This uses up the trust they have in you.",
            "skip_queue" => $"You're asking {CurrentNPC?.Name} to help you bend the rules. This damages their opinion of you.",
            "special_access" => $"You're calling in a favor from {CurrentNPC?.Name}. They won't forget this.",
            "item_favor" => $"You're asking {CurrentNPC?.Name} for special treatment. This weakens your relationship.",
            _ => $"You're using your relationship with {CurrentNPC?.Name} to get what you need. This has a cost."
        };
    }
}

