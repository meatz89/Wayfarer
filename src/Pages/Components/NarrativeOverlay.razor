@using System.Linq

<div class="narrative-overlay @(IsMinimized ? "minimized" : "")">
    <div class="narrative-header" @onclick="ToggleMinimize">
        <div class="narrative-title">
            <span class="narrative-icon">ðŸ“–</span>
            <span>@GetNarrativeName()</span>
        </div>
        <button class="minimize-button" aria-label="@(IsMinimized ? "Expand" : "Minimize")">
            @(IsMinimized ? "â–¼" : "â–²")
        </button>
    </div>
    
    @if (!IsMinimized)
    {
        <div class="narrative-content">
            @if (CurrentStep != null)
            {
                <div class="step-info">
                    <h3 class="step-name">@CurrentStep.Name</h3>
                    @if (!string.IsNullOrEmpty(CurrentStep.Description))
                    {
                        <p class="step-description">@CurrentStep.Description</p>
                    }
                </div>
                
                @if (!string.IsNullOrEmpty(CurrentStep.GuidanceText))
                {
                    <div class="guidance-box">
                        <div class="guidance-icon">ðŸ’¡</div>
                        <div class="guidance-text">@CurrentStep.GuidanceText</div>
                    </div>
                }
                
                <div class="progress-section">
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: @GetProgressPercentage()%"></div>
                    </div>
                    <div class="progress-text">Step @GetCurrentStepIndex() of @GetTotalSteps()</div>
                </div>
            }
            else
            {
                <div class="no-step-message">
                    <p>Loading narrative...</p>
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter] public NarrativeManager NarrativeManager { get; set; }
    [Parameter] public string ActiveNarrativeId { get; set; }
    
    private bool IsMinimized { get; set; } = false;
    private NarrativeStep CurrentStep => GetCurrentStep();
    
    private void ToggleMinimize()
    {
        IsMinimized = !IsMinimized;
    }
    
    private NarrativeStep GetCurrentStep()
    {
        if (NarrativeManager == null || string.IsNullOrEmpty(ActiveNarrativeId))
            return null;
            
        return NarrativeManager.GetCurrentStep(ActiveNarrativeId);
    }
    
    private string GetNarrativeName()
    {
        if (string.IsNullOrEmpty(ActiveNarrativeId))
            return "Tutorial";
            
        // Get the narrative definition to access its name
        var narrativeDef = NarrativeManager?.GetNarrativeDefinition(ActiveNarrativeId);
        if (narrativeDef != null)
            return narrativeDef.Name;
            
        // Fallback to formatted ID
        return ActiveNarrativeId switch
        {
            "wayfarer_tutorial" => "Wayfarer Tutorial",
            "patron_introduction" => "Meeting Your Patron",
            _ => "Story Progress"
        };
    }
    
    private int GetCurrentStepIndex()
    {
        if (NarrativeManager == null || string.IsNullOrEmpty(ActiveNarrativeId))
            return 1;
            
        var narrativeDef = NarrativeManager.GetNarrativeDefinition(ActiveNarrativeId);
        if (narrativeDef == null || CurrentStep == null)
            return 1;
            
        var currentStepId = CurrentStep.Id;
        var allSteps = narrativeDef.Steps;
        
        for (int i = 0; i < allSteps.Count; i++)
        {
            if (allSteps[i].Id == currentStepId)
                return i + 1;
        }
        
        return 1;
    }
    
    private int GetTotalSteps()
    {
        if (NarrativeManager == null || string.IsNullOrEmpty(ActiveNarrativeId))
            return 1;
            
        var narrativeDef = NarrativeManager.GetNarrativeDefinition(ActiveNarrativeId);
        return narrativeDef?.Steps?.Count ?? 1;
    }
    
    private int GetProgressPercentage()
    {
        var current = GetCurrentStepIndex();
        var total = GetTotalSteps();
        
        if (total == 0)
            return 0;
            
        return (int)((current / (float)total) * 100);
    }
}

