        font-weight: 600;
    }
    
    .minimize-button {
        background: none;
        border: none;
        color: #888;
        font-size: 14px;
        cursor: pointer;
        padding: 4px 8px;
        transition: color 0.2s;
    }
    
    .minimize-button:hover {
        color: #fff;
    }
    
    .narrative-content {
        padding: 16px;
    }
    
    .current-objective {
        margin-bottom: 16px;
    }
    
    .current-objective h4 {
        margin: 0 0 8px 0;
        font-size: 14px;
        color: #888;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .objective-text {
