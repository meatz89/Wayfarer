@using Wayfarer.Pages.Components

@if (IsVisible && CurrentStep != null)
{
    <div class="narrative-overlay @(IsMinimized ? "minimized" : "")">
        <div class="narrative-header" @onclick="ToggleMinimized">
            <h3 class="narrative-title">@NarrativeName</h3>
            <button class="minimize-button">
                @if (IsMinimized)
                {
                    <span>▼</span>
                }
                else
                {
                    <span>▲</span>
                }
            </button>
        </div>
        
        @if (!IsMinimized)
        {
            <div class="narrative-content">
                <div class="current-objective">
                    <h4>Current Objective</h4>
                    <p class="objective-text">@CurrentStep.Name</p>
                    @if (!string.IsNullOrEmpty(CurrentStep.Description))
                    {
                        <p class="objective-description">@CurrentStep.Description</p>
                    }
                </div>
                
                @if (!string.IsNullOrEmpty(CurrentStep.GuidanceText))
                {
                    <div class="guidance-section">
                        <h5>Hint</h5>
                        <p class="guidance-text">@CurrentStep.GuidanceText</p>
                    </div>
                }
                
                @if (ShowProgress)
                {
                    <div class="progress-section">
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: @ProgressPercentage%"></div>
                        </div>
                        <p class="progress-text">Step @CurrentStepIndex of @TotalSteps</p>
                    </div>
                }
            </div>
        }
    </div>
}

@code {
    [Parameter] public NarrativeManager NarrativeManager { get; set; }
    [Parameter] public string ActiveNarrativeId { get; set; }
    [Parameter] public bool ShowProgress { get; set; } = true;
    
    private bool IsVisible => !string.IsNullOrEmpty(ActiveNarrativeId) && CurrentStep != null;
    private bool IsMinimized { get; set; } = false;
    
    private NarrativeStep CurrentStep => NarrativeManager?.GetCurrentStep(ActiveNarrativeId);
    private string NarrativeName => GetNarrativeName();
    private int CurrentStepIndex => GetCurrentStepIndex();
    private int TotalSteps => GetTotalSteps();
    private int ProgressPercentage => TotalSteps > 0 ? (CurrentStepIndex * 100 / TotalSteps) : 0;
    
    private void ToggleMinimized()
    {
        IsMinimized = !IsMinimized;
    }
    
    private string GetNarrativeName()
    {
        // This would be implemented based on NarrativeManager API
        // For now, return a default
        return ActiveNarrativeId switch
        {
            "wayfarer_tutorial" => "Tutorial: From Destitute to Patronage",
            _ => "Current Quest"
        };
    }
    
    private int GetCurrentStepIndex()
    {
        // This would be implemented based on NarrativeManager API
        // For now, return a placeholder
        return 1;
    }
    
    private int GetTotalSteps()
    {
        // This would be implemented based on NarrativeManager API
        // For now, return a placeholder
        return 10;
    }
}

