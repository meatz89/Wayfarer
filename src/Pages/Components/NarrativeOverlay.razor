        margin-top: 16px;
        padding-top: 16px;
        border-top: 1px solid #333;
    }
    
    .progress-bar {
        width: 100%;
        height: 6px;
        background: #222;
        border-radius: 3px;
        overflow: hidden;
        margin-bottom: 8px;
    }
    
    .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, #4a7c4e 0%, #6fa574 100%);
        transition: width 0.3s ease;
    }
    
    .progress-text {
        margin: 0;
        font-size: 12px;
        color: #888;
        text-align: center;
    }
    
    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .narrative-overlay {
            top: 60px;
            right: 10px;
            left: 10px;
            width: auto;
            max-width: 400px;
        }
    }
</style>