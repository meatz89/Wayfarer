@using Wayfarer.GameState.Interactions

@* 
   Unified Choice Component - Used for ALL player interactions
   Based on agent feedback: Narrative focus, not mechanical
*@

<div class="choice-option @GetChoiceClass()" @onclick="HandleClick">
    @* Attention cost badge - matching mockup exactly *@
    @if (Choice.AttentionCost > 0)
    {
        <div class="attention-cost">
            @GetCostDisplay()
        </div>
    }
    else
    {
        <div class="attention-cost free">
            FREE
        </div>
    }
    
    @* Main choice text *@
    <div class="choice-content">
        <div class="choice-text">
            "@Choice.DisplayText"
        </div>
        
        @* Mechanical previews - with proper color coding *@
        @if (Choice.MechanicalPreviews?.Any() == true && ShowPreviews)
        {
            <div class="choice-mechanics">
                @foreach (var preview in Choice.MechanicalPreviews)
                {
                    <div class="mechanic-item @GetMechanicClass(preview)">
                        <span class="mechanic-icon">
                            @GetEffectIcon(preview)
                        </span>
                        <span class="mechanic-text">
                            @((MarkupString)StripHtmlTags(preview))
                        </span>
                    </div>
                }
            </div>
        }
        
        @* Lock reason if unavailable *@
        @if (!IsAvailable && !string.IsNullOrEmpty(Choice.LockReason))
        {
            <div class="lock-reason">
                @GetNarrativeLockReason()
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public IInteractiveChoice Choice { get; set; }
    [Parameter] public EventCallback<IInteractiveChoice> OnSelected { get; set; }
    [Parameter] public int AvailableAttention { get; set; }
    [Parameter] public bool ShowPreviews { get; set; } = true;
    
    private bool IsAvailable => Choice.IsAvailable && Choice.AttentionCost <= AvailableAttention;
    private bool IsProcessing { get; set; }

    private string GetChoiceClass()
    {
        var classes = new List<string>();
        
        // Base style from choice type
        classes.Add($"choice-type-{Choice.Type.ToString().ToLower()}");
        
        // Attention weight class
        classes.Add($"attention-weight-{Choice.AttentionCost}");
        
        // Availability
        if (!IsAvailable)
        {
            classes.Add("locked");
            
            // Different lock reasons get different styling
            if (Choice.AttentionCost > AvailableAttention)
                classes.Add("locked-exhausted");
            else if (Choice.LockReason?.Contains("trust") == true)
                classes.Add("locked-trust");
            else if (Choice.LockReason?.Contains("time") == true)
                classes.Add("locked-time");
        }
        
        // Style hints  
        if (Choice.Style != InteractionStyle.Default)
            classes.Add($"style-{Choice.Style.ToString().ToLower()}");
        
        // Processing state
        if (IsProcessing)
            classes.Add("processing");
            
        return string.Join(" ", classes);
    }

    private string GetCostDisplay()
    {
        // Show dots matching mockup style (●)
        return Choice.AttentionCost switch
        {
            1 => "● 1",
            2 => "●● 2",
            3 => "●●● 3",
            _ => $"{new string('●', Math.Min(Choice.AttentionCost, 5))} {Choice.AttentionCost}"
        };
    }

    private string GetNarrativeLockReason()
    {
        // Transform mechanical lock reasons into narrative ones
        if (Choice.AttentionCost > AvailableAttention)
        {
            return AvailableAttention == 0 
                ? "Too exhausted to focus on this"
                : "Requires deeper concentration than you can muster";
        }
        
        // Use the actual lock reason but make it narrative
        return Choice.LockReason?.Replace("Requires", "You need")
            .Replace("tokens", "trust")
            .Replace("Not enough", "Lacking") 
            ?? "Not available";
    }

    private string GetEffectIcon(string description)
    {
        // Use simple Unicode symbols matching mockup (✓, ⚠, ℹ, →)
        var lowerDesc = description.ToLowerInvariant();
        
        // Check for explicit icons in the description first
        if (description.Contains("✓")) return "✓";
        if (description.Contains("⚠")) return "⚠";
        if (description.Contains("ℹ")) return "ℹ";
        if (description.Contains("→")) return "→";
        
        // Positive outcomes
        if (lowerDesc.Contains("gain") || lowerDesc.Contains("unlock") || 
            lowerDesc.Contains("open") || lowerDesc.Contains("+"))
            return "✓";
            
        // Negative/warning outcomes  
        if (lowerDesc.Contains("lose") || lowerDesc.Contains("burn") || 
            lowerDesc.Contains("cost") || lowerDesc.Contains("obligation") ||
            lowerDesc.Contains("binding") || lowerDesc.Contains("-"))
            return "⚠";
            
        // Informational/neutral
        if (lowerDesc.Contains("learn") || lowerDesc.Contains("discover") ||
            lowerDesc.Contains("investigate") || lowerDesc.Contains("maintain"))
            return "ℹ";
            
        // Directional/progression
        return "→";
    }

    private string GetMechanicClass(string preview)
    {
        // Style effects based on their type - matching mockup colors
        var lowerPreview = preview.ToLowerInvariant();
        
        // Positive effects (green)
        if (preview.Contains("✓") || lowerPreview.Contains("gain") || 
            lowerPreview.Contains("opens") || lowerPreview.Contains("+") ||
            lowerPreview.Contains("unlock"))
            return "mechanic-positive";
            
        // Negative effects (red)
        if (preview.Contains("⚠") || lowerPreview.Contains("lose") || 
            lowerPreview.Contains("burn") || lowerPreview.Contains("cost") ||
            lowerPreview.Contains("-") || lowerPreview.Contains("obligation") ||
            lowerPreview.Contains("binding"))
            return "mechanic-negative";
            
        // Informational effects (blue)
        if (preview.Contains("ℹ") || preview.Contains("→") || 
            lowerPreview.Contains("learn") || lowerPreview.Contains("maintain") ||
            lowerPreview.Contains("time") || lowerPreview.Contains("minute") ||
            lowerPreview.Contains("investigate") || lowerPreview.Contains("discover"))
            return "mechanic-neutral";
            
        return "mechanic-neutral";
    }

    private async Task HandleClick()
    {
        if (!IsAvailable || IsProcessing)
            return;
            
        IsProcessing = true;
        StateHasChanged();
        
        try
        {
            await OnSelected.InvokeAsync(Choice);
        }
        finally
        {
            IsProcessing = false;
            StateHasChanged();
        }
    }
    
    private string StripHtmlTags(string input)
    {
        // Remove HTML tags and leave just the text content
        if (string.IsNullOrEmpty(input))
            return input;
            
        // Simple regex to strip HTML tags
        return System.Text.RegularExpressions.Regex.Replace(input, "<.*?>", string.Empty);
    }
}