@inherits MentalContentBase

@namespace Wayfarer.Pages.Components
@using Wayfarer.Pages.Components.Shared

@if (Session != null)
{
    <div class="mental-content">
        <!-- Venue context bar -->
        <div class="location-context">
            <span>
                Obligation: @Session.Obligation?.Name
            </span>
        </div>

        <!-- Obligation Bar -->
        <div class="obligation-bar">
            <div class="obligation-info">
                <div class="obligation-name">Mental Obligation</div>
                <div class="obligation-status">
                    Phase @Session.CurrentPhaseIndex | Tier @GetCurrentTier()
                </div>
            </div>
        </div>

        <!-- Core Resources Display -->
        <div class="resources-display">
            <ResourceBar Label="Progress"
                         CurrentValue="@Session.CurrentProgress"
                         MaxValue="20"
                         BarType="progress"
                         ShowMaxValue="true" />

            <div></div>

            <ResourceBar Label="Exposure"
                         CurrentValue="@Session.CurrentExposure"
                         MaxValue="10"
                         BarType="consequence"
                         ShowMaxValue="true" />
        </div>

        <!-- Situation Thresholds Display -->
        <div class="situations-section">
            <div class="situations-container">
                <div class="situation-card @(Session.CurrentProgress >= 10 ? "achievable" : "")">
                    <div class="situation-threshold">10</div>
                    <div class="situation-name">Partial Understanding</div>
                    <div class="situation-reward">1 Clue</div>
                </div>
                <div class="situation-card @(Session.CurrentProgress >= 20 ? "achievable active" : "")">
                    <div class="situation-threshold">20</div>
                    <div class="situation-name">Full Obligation</div>
                    <div class="situation-reward">Complete + Knowledge</div>
                </div>
            </div>
        </div>

        <!-- Narrative Section -->
        <div class="narrative-section">
            @if (!string.IsNullOrEmpty(LastNarrative))
            {
                <div class="narrative-text">
                    @LastNarrative
                </div>
            }
        </div>

        <!-- Action Section -->
        <div class="action-display">
            <div class="pile-display">
                <div class="pile-count">
                    <span>Details:</span>
                    <span class="pile-number">@GetDeckCount()</span>
                </div>
            </div>
            <div class="action-section">
                @if (!IsObligationEnded)
                {
                <div class="action-button"
                     @onclick="ExecuteObserve">
                    OBSERVE
                    @if (SelectedCard != null)
                    {
                        <div class="tooltip card-effects-tooltip">
                            <div class="tooltip-title">Observe</div>
                            <div class="tooltip-section">
                                <strong>Effects:</strong>
                                <ul>
                                    <li>Balance: -1 (toward Overcautious)</li>
                                    <li>Play selected card</li>
                                </ul>
                            </div>
                        </div>
                    }
                </div>
                <div class="action-button primary @(SelectedCard == null || IsProcessing ? "disabled" : "")"
                     @onclick="ExecuteAct"
                     disabled="@(SelectedCard == null || IsProcessing)">
                    ACT
                    @if (SelectedCard != null)
                    {
                        <div class="tooltip card-effects-tooltip">
                            <div class="tooltip-title">Act</div>
                            <div class="tooltip-section">
                                <strong>Effects:</strong>
                                <ul>
                                    <li>Balance: +1 (toward Reckless)</li>
                                    <li>Play selected card</li>
                                </ul>
                            </div>
                        </div>
                    }
                </div>
                }
                else
                {
                    <div class="action-button primary" @onclick="EndObligation">
                        END OBLIGATION
                    </div>
                }
            </div>
            <div class="pile-display">
                <div class="pile-count">
                    <span>Applied:</span>
                    <span class="pile-number">@GetDiscardCount()</span>
                </div>
            </div>
        </div>

        <!-- Attention Display (with glowing orbs matching mockup) -->
        <ActionEconomyDisplay Label="Attention"
                              CurrentValue="@GetCurrentAttention()"
                              MaxValue="@GetMaxAttention()"
                              TooltipContent="@TooltipContentProvider.Get("Attention")" />

        <!-- Tier Unlock Display -->
        <div class="tier-display">
            <div class="tier-info">
                <GameTooltip Content="@TooltipContentProvider.Get("Understanding")" Position="right">
                    <span class="tier-label">Understanding: @GetCurrentUnderstanding() / @GetMaxUnderstanding()</span>
                </GameTooltip>
                <div class="tier-unlocks">
                    @foreach (var tier in GetAllTiers())
                    {
                        <span class="tier-badge @(IsTierUnlocked(tier.TierNumber) ? "unlocked" : "locked")">
                            TIER @tier.TierNumber (@tier.MinDepth-@tier.MaxDepth)<br /><small>Understanding @tier.UnderstandingThreshold</small>
                        </span>
                    }
                </div>
            </div>
        </div>

        <!-- Available Situation Cards (Victory Conditions) -->
        @if (GetAvailableSituationCards().Any())
        {
            <div class="available-situations-section">
                <div class="pile-display">
                    <div class="pile-count">
                        <span>Available Situations:</span>
                        <span class="pile-number">@GetAvailableSituationCards().Count</span>
                    </div>
                </div>

                <div class="situation-cards-grid">
                    @foreach (var situationCard in GetAvailableSituationCards())
                    {
                        <SituationCard Card="@situationCard"
                                  CurrentProgress="@Session.CurrentProgress"
                                  CalculatedDifficulty="@GetSituationDifficulty(situationCard)"
                                  OnCardClick="@PlaySituationCard" />
                    }
                </div>
            </div>
        }

        <!-- Hand Display -->
        <div class="cards-section">
            <div class="pile-display">
                <div class="pile-count">
                    <span>Methods:</span>
                    <span class="pile-number">@Hand.Count</span>
                </div>
            </div>

            <div class="card-grid slot-aware-container" style="@GetContainerCSSVariables()">
                @foreach (var displayCard in GetAllDisplayCards())
                {
                    var card = displayCard.Card;

                    <MentalCard Card="@card"
                                IsSelected="@(SelectedCard == card)"
                                IsSelectable="true"
                                Session="@Session"
                                OnCardClick="@(() => SelectCard(card))">
                        <SystemSpecificBadges>
                            <span class="card-method" title="Mental approach">
                                @card.MentalCardTemplate.Method
                            </span>
                        </SystemSpecificBadges>
                    </MentalCard>
                }
            </div>
        </div>

        @if (IsProcessing)
        {
            <div class="processing-overlay">
                <div class="spinner"></div>
            </div>
        }
    </div>
}
else
{
    <div class="no-session">
        <p>No active mental obligation session</p>
    </div>
}
