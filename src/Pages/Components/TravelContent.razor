@inherits TravelContentBase

@namespace Wayfarer.Pages.Components

<div class="travel-content">
    <div class="travel-header">
        <div>
            <h2>Select Travel Route</h2>
            <div class="current-location">
                <span>From:</span>
                <strong>@CurrentLocation</strong>
            </div>
        </div>
    </div>

    @{
        var player = GameFacade.GetPlayer();
        var currentTime = TimeManager.GetCurrentTimeBlock();
    }
    
    <div class="resources-preview">
        <div class="resource-item">
            <span class="resource-label">Coins:</span>
            <span class="resource-value">@player.Coins</span>
        </div>
        <div class="resource-item">
            <span class="resource-label">Current Time:</span>
            <span class="resource-value">@currentTime</span>
        </div>
        <div class="resource-item">
            <span class="resource-label">Hunger:</span>
            <span class="resource-value">@player.Hunger/@player.MaxHunger</span>
        </div>
    </div>

    @if (AvailableRoutes.Any())
    {
        <div class="routes-section">
            @{
                var groupedRoutes = AvailableRoutes
                    .GroupBy(r => r.DestinationName)
                    .OrderBy(g => g.Key);
            }
            
            @foreach (var group in groupedRoutes)
            {
                <div class="destination-group">
                    <div class="destination-header">
                        <div class="destination-name">@group.Key</div>
                        <div class="destination-info">@group.First().District</div>
                    </div>
                    <div class="route-list">
                        @foreach (var route in group)
                        {
                            <div class="route-card @GetRouteTypeClass(route) @GetRouteClass(route)" 
                                 @onclick="() => SelectRoute(route)">
                                <div class="route-header">
                                    <h4>@route.Name</h4>
                                    <div class="route-distance">@route.TransportType</div>
                                </div>
                                
                                <div class="route-details">
                                    <div class="route-time">
                                        <span class="time-label">Time:</span>
                                        <span class="time-value">@GetTravelTimeDisplay(route.TravelTime)</span>
                                    </div>
                                    
                                    @if (route.HungerCost > 0)
                                    {
                                        <div class="route-hunger">
                                            <span class="hunger-label">Hunger:</span>
                                            <span class="hunger-value">+@route.HungerCost</span>
                                        </div>
                                    }
                                </div>
                                
                                @if (route.Tags.Any())
                                {
                                    <div class="route-tags">
                                        @foreach (var tag in route.Tags)
                                        {
                                            <span class="route-tag @GetTagClass(tag)">@tag</span>
                                        }
                                    </div>
                                }
                                
                                @if (route.Requirements.Any())
                                {
                                    <div class="route-requirements @(!CanTakeRoute(route) ? "unmet" : "")">
                                        <span class="req-label">Requires:</span>
                                        @foreach (var req in route.Requirements)
                                        {
                                            <span class="requirement">@req</span>
                                        }
                                    </div>
                                }
                                
                                <div class="route-action">
                                    @if (route.Cost > 0)
                                    {
                                        <span class="cost-value">@route.Cost coins</span>
                                    }
                                    else
                                    {
                                        <span class="cost-free">Free</span>
                                    }
                                    
                                    @if (CanTakeRoute(route))
                                    {
                                        <button class="travel-button" 
                                                @onclick:stopPropagation="true"
                                                @onclick="() => TravelRoute(route)">
                                            Travel
                                        </button>
                                    }
                                    else
                                    {
                                        <div class="cannot-travel">
                                            @GetCannotTravelReason(route)
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-routes">
            <p>No travel routes available from this location.</p>
            <p>Move to a Crossroads spot to access travel options.</p>
        </div>
    }

    <div class="travel-footer">
        <div class="footer-info">Routes with special properties may trigger encounters or events during travel</div>
        <button class="back-button" @onclick="ReturnToLocation">
            Back to Location
        </button>
    </div>
</div>