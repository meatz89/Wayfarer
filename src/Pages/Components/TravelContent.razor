@inherits TravelContentBase

@namespace Wayfarer.Pages.Components

@if (HasActiveTravelSession())
{
    <!-- Show Path Cards UI -->
    <TravelPathContent TravelContext="@CurrentTravelContext" OnNavigate="OnNavigate" />
}
else
{
    <!-- Show Route Selection UI (no wrapper div - uses shared .game-container from GameScreen) -->
    <!-- Header -->
    <div class="travel-header">
        <div>
            <div class="header-title">Select Travel Route</div>
            <div class="current-location">From: @CurrentLocation</div>
        </div>
    </div>

    <!-- Time Status Bar with Segment Dots -->
    <div class="time-status-bar">
        <div class="current-time-display">
            <span class="time-label">Current:</span>
            <span class="time-value">@CurrentTimeBlock</span>
            <div class="segment-dots-display">
                @foreach (var dotClass in GetSegmentDotClasses())
                {
                    <div class="@dotClass"></div>
                }
            </div>
        </div>
        <div class="resources-inline">
            <span class="resource-inline">üí∞ @CurrentPlayer.Coins</span>
            <span class="resource-inline">üçñ @CurrentPlayer.Hunger/@CurrentPlayer.MaxHunger</span>
        </div>
    </div>

    <!-- Route List -->
    <div class="route-list">
        @if (AvailableRoutes.Any())
        {
            var walkingRoutes = AvailableRoutes.Where(r => r.TransportType == "WALKING").ToList();
            var specialRoutes = AvailableRoutes.Where(r => r.TransportType != "WALKING").ToList();

            @if (walkingRoutes.Any())
            {
                <div class="route-group">
                    <div class="route-group-header">Walking Routes</div>
                    @foreach (var route in walkingRoutes)
                    {
                        var isLocked = !CanTakeRoute(route);
                        <div class="route-card @GetRouteTypeClass(route) @(isLocked ? "locked" : "")"
                             @onclick="() => { if (!isLocked) SelectRoute(route); }">
                            <div class="route-header-row">
                                <div class="route-name">@route.DestinationName</div>
                                <span class="route-type-badge">@route.TransportType</span>
                            </div>
                            @if (!string.IsNullOrEmpty(route.DestinationSpotName))
                            {
                                <div class="route-subtitle">@route.DestinationSpotName</div>
                            }

                            <div class="segment-cost-display">
                                <span class="segment-cost-label">Time Cost:</span>
                                <div class="segment-blocks">
                                    @if (route.TravelTime > 0)
                                    {
                                        @for (int i = 0; i < route.TravelTime; i++)
                                        {
                                            <div class="segment-block"></div>
                                        }
                                    }
                                    else
                                    {
                                        <span class="instant-badge">Instant</span>
                                    }
                                </div>
                                <span class="segment-text">@(route.TravelTime > 0 ? $"{route.TravelTime} segment{(route.TravelTime != 1 ? "s" : "")}" : "No time cost")</span>
                            </div>

                            <div class="route-details-row">
                                @if (route.HungerCost > 0)
                                {
                                    <div class="detail-item">
                                        <span class="detail-label">Hunger:</span>
                                        <span class="detail-value">+@route.HungerCost</span>
                                    </div>
                                }
                                @if (route.Cost > 0)
                                {
                                    <div class="detail-item">
                                        <span class="detail-label">Cost:</span>
                                        <span class="detail-value">@route.Cost coins</span>
                                    </div>
                                }
                            </div>

                            @if (route.Tags.Any())
                            {
                                <div class="route-tags">
                                    @foreach (var tag in route.Tags)
                                    {
                                        <span class="route-tag @GetTagClass(tag)">@tag</span>
                                    }
                                </div>
                            }

                            @if (route.Requirements.Any())
                            {
                                <div class="route-requirements @(isLocked ? "requirement-missing" : "")">
                                    <div class="requirement-label">@(isLocked ? "‚ö†Ô∏è Requirements Not Met" : "Requirements:")</div>
                                    <div class="requirement-list">
                                        @foreach (var req in route.Requirements)
                                        {
                                            <div>‚Ä¢ @req</div>
                                        }
                                    </div>
                                </div>
                            }

                            <div class="route-action">
                                <button class="travel-button @(!isLocked ? "active" : "disabled")"
                                        disabled="@isLocked"
                                        @onclick:stopPropagation="true"
                                        @onclick="() => TravelRoute(route)">
                                    @(isLocked ? "LOCKED" : "TRAVEL")
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }

            @if (specialRoutes.Any())
            {
                <div class="route-group">
                    <div class="route-group-header">Special Transport</div>
                    @foreach (var route in specialRoutes)
                    {
                        var isLocked = !CanTakeRoute(route);
                        <div class="route-card @GetRouteTypeClass(route) @(isLocked ? "locked" : "")"
                             @onclick="() => { if (!isLocked) SelectRoute(route); }">
                            <div class="route-header-row">
                                <div class="route-name">@route.DestinationName</div>
                                <span class="route-type-badge">@route.TransportType</span>
                            </div>
                            @if (!string.IsNullOrEmpty(route.DestinationSpotName))
                            {
                                <div class="route-subtitle">@route.DestinationSpotName</div>
                            }

                            <div class="segment-cost-display">
                                <span class="segment-cost-label">Time Cost:</span>
                                <div class="segment-blocks">
                                    @if (route.TravelTime > 0)
                                    {
                                        @for (int i = 0; i < route.TravelTime; i++)
                                        {
                                            <div class="segment-block"></div>
                                        }
                                    }
                                    else
                                    {
                                        <span class="instant-badge">Instant</span>
                                    }
                                </div>
                                <span class="segment-text">@(route.TravelTime > 0 ? $"{route.TravelTime} segment{(route.TravelTime != 1 ? "s" : "")}" : "No time cost")</span>
                            </div>

                            <div class="route-details-row">
                                @if (route.HungerCost > 0)
                                {
                                    <div class="detail-item">
                                        <span class="detail-label">Hunger:</span>
                                        <span class="detail-value">+@route.HungerCost</span>
                                    </div>
                                }
                                @if (route.Cost > 0)
                                {
                                    <div class="detail-item">
                                        <span class="detail-label">Cost:</span>
                                        <span class="detail-value">@route.Cost coins</span>
                                    </div>
                                }
                            </div>

                            @if (route.Tags.Any())
                            {
                                <div class="route-tags">
                                    @foreach (var tag in route.Tags)
                                    {
                                        <span class="route-tag @GetTagClass(tag)">@tag</span>
                                    }
                                </div>
                            }

                            @if (route.Requirements.Any())
                            {
                                <div class="route-requirements @(isLocked ? "requirement-missing" : "")">
                                    <div class="requirement-label">@(isLocked ? "‚ö†Ô∏è Requirements Not Met" : "Requirements:")</div>
                                    <div class="requirement-list">
                                        @foreach (var req in route.Requirements)
                                        {
                                            <div>‚Ä¢ @req</div>
                                        }
                                    </div>
                                </div>
                            }

                            <div class="route-action">
                                <button class="travel-button @(!isLocked ? "active" : "disabled")"
                                        disabled="@isLocked"
                                        @onclick:stopPropagation="true"
                                        @onclick="() => TravelRoute(route)">
                                    @(isLocked ? "LOCKED" : "TRAVEL")
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }
        }
        else
        {
            <div class="no-routes">
                <p>No travel routes available from this location.</p>
                <p>Move to a Crossroads spot to access travel options.</p>
            </div>
        }
    </div>

    <!-- Footer -->
    <div class="travel-footer">
        Routes with special properties may trigger encounters or events during travel
    </div>
    
    <button class="back-button" @onclick="ReturnToLocation">
        Back to Location
    </button>
}