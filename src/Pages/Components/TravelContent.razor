@inherits TravelContentBase

@namespace Wayfarer.Pages.Components

<div class="travel-container">
    <!-- Header -->
    <div class="travel-header">
        <div>
            <div class="header-title">Select Travel Route</div>
            <div class="current-location">From: @CurrentLocation</div>
        </div>
    </div>

    @{
        var player = GameFacade.GetPlayer();
        var currentTime = TimeManager.GetCurrentTimeBlock();
    }

    <!-- Resources Preview -->
    <div class="resources-preview">
        <div class="resource-item">
            <span class="resource-label">Coins:</span>
            <span class="resource-value">@player.Coins</span>
        </div>
        <div class="resource-item">
            <span class="resource-label">Current Time:</span>
            <span class="resource-value">@currentTime</span>
        </div>
        <div class="resource-item">
            <span class="resource-label">Hunger:</span>
            <span class="resource-value">@player.Hunger/@player.MaxHunger</span>
        </div>
    </div>

    <!-- Destinations List -->
    <div class="destinations-list">
        @if (AvailableRoutes.Any())
        {
            var groupedRoutes = AvailableRoutes
                .GroupBy(r => r.DestinationName)
                .OrderBy(g => g.Key);
            
            @foreach (var group in groupedRoutes)
            {
                <div class="destination-group">
                    <div class="destination-header">
                        <div class="destination-name">@group.Key</div>
                        <div class="destination-info">@group.First().District</div>
                    </div>
                    <div class="routes-container">
                        @foreach (var route in group)
                        {
                            var isLocked = !CanTakeRoute(route);
                            <div class="route-card @GetRouteTypeClass(route) @(isLocked ? "locked" : "")"
                                 @onclick="() => { if (!isLocked) SelectRoute(route); }">
                                <div class="route-main">
                                    <div class="route-info">
                                        <div class="route-name">@route.Name</div>
                                        <span class="route-transport">@route.TransportType</span>
                                        <div class="route-details">
                                            <div class="route-stat">
                                                <span class="stat-label">Time:</span>
                                                <span class="stat-value">@GetTravelTimeDisplay(route.TravelTime)</span>
                                            </div>
                                            @if (route.HungerCost > 0)
                                            {
                                                <div class="route-stat">
                                                    <span class="stat-label">Hunger:</span>
                                                    <span class="stat-value stat-cost">+@route.HungerCost</span>
                                                </div>
                                            }
                                        </div>
                                        @if (route.Tags.Any())
                                        {
                                            <div class="route-tags">
                                                @foreach (var tag in route.Tags)
                                                {
                                                    <span class="route-tag @GetTagClass(tag)">@tag</span>
                                                }
                                            </div>
                                        }
                                        @if (route.Requirements.Any())
                                        {
                                            <div class="requirement-box @(isLocked ? "requirement-missing" : "")">
                                                <span class="requirement-label">Requires:</span>
                                                <span class="requirement-text">
                                                    @string.Join(", ", route.Requirements)
                                                </span>
                                            </div>
                                        }
                                    </div>
                                    <div class="route-costs">
                                        @if (route.Cost > 0)
                                        {
                                            <div class="cost-item cost-coins">@route.Cost coins</div>
                                        }
                                        else
                                        {
                                            <div class="cost-item cost-free">Free</div>
                                        }
                                        @if (route == SelectedRoute)
                                        {
                                            <button class="travel-button @(!isLocked ? "active" : "disabled")"
                                                    disabled="@isLocked"
                                                    @onclick:stopPropagation="true"
                                                    @onclick="() => TravelRoute(route)">
                                                TRAVEL
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="no-routes">
                <p>No travel routes available from this location.</p>
                <p>Move to a Crossroads spot to access travel options.</p>
            </div>
        }
    </div>

    <!-- Footer -->
    <div class="travel-footer">
        Routes with special properties may trigger encounters or events during travel
    </div>
    
    <button class="back-button" @onclick="ReturnToLocation">
        Back to Location
    </button>
</div>