@using Wayfarer.Pages.Components
@inject LocationActionsUIService ActionsService
@inject NavigationService NavigationService

<div class="location-actions">
    @{
        var viewModel = ActionsService.GetLocationActionsViewModel();
    }
    
    <div class="actions-header">
        <h3>Available Actions</h3>
        <div class="resource-status">
            <span class="resource-item">‚è∞ @viewModel.HoursRemaining hours</span>
            <span class="resource-item">üí™ @viewModel.PlayerStamina stamina</span>
            <span class="resource-item">ü™ô @viewModel.PlayerCoins coins</span>
        </div>
    </div>
    
    @if (!viewModel.ActionGroups.Any())
    {
        <div class="no-actions">
            <p>No actions available at this location.</p>
            <p>Try visiting different spots or waiting for NPCs to appear.</p>
        </div>
    }
    else
    {
        @foreach (var group in viewModel.ActionGroups)
        {
            <div class="action-group">
                <h4 class="group-title">@group.ActionType</h4>
                <div class="actions-list">
                    @foreach (var action in group.Actions)
                    {
                        <div class="action-item @(CanAffordAction(action) ? "" : "disabled")">
                            <div class="action-info">
                                <div class="action-name">@action.Description</div>
                                @if (!string.IsNullOrEmpty(action.NPCName))
                                {
                                    <div class="action-npc">with @action.NPCName</div>
                                }
                            </div>
                            
                            <div class="action-costs">
                                @if (action.TimeCost > 0)
                                {
                                    <span class="cost-item @(action.HasEnoughTime ? "" : "insufficient")">
                                        ‚è∞ @action.TimeCost hr
                                    </span>
                                }
                                @if (action.StaminaCost > 0)
                                {
                                    <span class="cost-item @(action.HasEnoughStamina ? "" : "insufficient")">
                                        üí™ @action.StaminaCost
                                    </span>
                                }
                                @if (action.CoinCost > 0)
                                {
                                    <span class="cost-item @(action.HasEnoughCoins ? "" : "insufficient")">
                                        ü™ô @action.CoinCost
                                    </span>
                                }
                            </div>
                            
                            @if (!string.IsNullOrEmpty(action.RewardsDescription))
                            {
                                <div class="action-rewards">
                                    <span class="reward-label">Rewards:</span> @action.RewardsDescription
                                </div>
                            }
                            
                            <button class="action-button" 
                                    disabled="@(!CanAffordAction(action))"
                                    @onclick="async () => await ExecuteAction(action.Id)">
                                @(CanAffordAction(action) ? "Do This" : "Cannot Afford")
                            </button>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>

@code {
    private bool CanAffordAction(ActionOptionViewModel action)
    {
        return action.HasEnoughTime && action.HasEnoughStamina && action.HasEnoughCoins;
    }
    
    private async Task ExecuteAction(string actionId)
    {
        var success = await ActionsService.ExecuteActionAsync(actionId);
        
        // Whether success or failure, refresh the UI
        // The CommandExecutor will have updated game state and shown messages
        StateHasChanged();
    }
}

