@namespace Wayfarer.Pages.Components
@inherits StrangerListBase

@*
    Stranger List Component
    Shows available strangers at current Venue with conversation options
    Indicates stranger levels, personality types, and availability
*@

@if (AvailableStrangers.Any())
{
    <div class="strangers-section">
        <div class="section-header">Strangers at This Location</div>

        <div class="stranger-list">
            @foreach (var stranger in AvailableStrangers)
            {
                <div class="stranger-card @(stranger.HasBeenEncountered ? "talked-to" : "")">
                    <div class="stranger-header">
                        <div class="stranger-identity">
                            <div class="stranger-name">@stranger.Name</div>
                            <div class="stranger-type">@GetPersonalityDescription(stranger.PersonalityType)</div>
                        </div>
                        <div class="stranger-level stranger-level-@stranger.Level">
                            Level @stranger.Level
                        </div>
                    </div>

                    @if (stranger.HasBeenEncountered)
                    {
                        <div class="stranger-status">
                            <span class="talked-indicator">Already talked to this time block</span>
                        </div>
                    }
                    else
                    {
                        <div class="stranger-description">
                            @GetStrangerDescription(stranger)
                        </div>

                        <div class="stranger-conversations">
                            @* DEPRECATED: Strangers no longer have inline requests *@
                            <div class="stranger-note">No conversations available (legacy code removed)</div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="no-strangers">
        <span>No strangers available at this time</span>
    </div>
}