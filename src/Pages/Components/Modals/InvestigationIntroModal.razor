@inherits InvestigationIntroModalBase
@namespace Wayfarer.Pages.Components

<div class="investigation-notification-container">
    <div class="investigation-header" style="background: linear-gradient(to bottom, @GetHeaderColor(), @GetHeaderColorLight()); border-bottom: 2px solid @GetBorderColor();">
        <div class="investigation-icon">üîç</div>
        <div class="investigation-title-section">
            <div class="investigation-main-title">Begin Investigation</div>
            <div class="investigation-subtitle">@Data.InvestigationName</div>
        </div>
    </div>

    <div class="investigation-discovery-section">
        <div class="discovery-narrative">@Data.IntroNarrative</div>

        @if (!string.IsNullOrEmpty(Data.LocationName))
        {
            <div class="intro-action-hint">
                <div class="hint-icon">‚Üí</div>
                <div class="hint-text">Available at: <span style="font-weight: bold; color: @GetHeaderColor();">@Data.LocationName - @Data.SpotName</span></div>
            </div>
        }
    </div>

    <div class="action-section discovery-actions" style="padding: 20px;">
        <button class="continue-button primary-action" @onclick="BeginInvestigation">@Data.IntroActionText</button>
        <button class="secondary-action dismiss-button" @onclick="DismissModal">Not Now</button>
    </div>
</div>
