                    <div class="observation-card">
                        <div class="observation-card-title">@obsCard.Title</div>
                        <div class="observation-card-effect">Unlocked for conversations with @obsCard.TargetNpcId</div>
                    </div>
                }
            </div>
        }

        <button class="continue-journey-button" @onclick="CloseModal">Continue Your Journey</button>
    </div>
</div>
