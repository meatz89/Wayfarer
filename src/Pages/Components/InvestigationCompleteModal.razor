                        </div>
                    </div>
                </div>
            </div>
        }

        @if (Data.ObservationCards != null && Data.ObservationCards.Count > 0)
        {
            <div class="observation-rewards">
                <div class="observation-title">
                    <span>ðŸŽ´</span>
