@inherits ConversationContentBase

@namespace Wayfarer.Pages.Components

<div class="conversation-content">
    @if (Session != null)
    {
        <!-- Conversation Mode Indicator -->
        <div class="conversation-mode">
            <div class="mode-title">@GetConversationModeTitle()</div>
            <div class="mode-cost">
                @if ((Context?.Type ?? ConversationType.Standard) != ConversationType.QuickExchange)
                {
                    <span class="cost-item">@Session.CurrentPatience/@Session.MaxPatience Patience</span>
                }
            </div>
        </div>

        <!-- NPC Info -->
        <div class="npc-header">
            <div class="npc-info">
                <h2>@NpcName</h2>
                @if ((Context?.Type ?? ConversationType.Standard) != ConversationType.QuickExchange)
                {
                    <div class="npc-state @GetStateClass()">@Session.CurrentState</div>
                }
            </div>
        </div>

        @if ((Context?.Type ?? ConversationType.Standard) != ConversationType.QuickExchange)
        {
            <!-- Progress Section -->
            <div class="progress-section">
                <div class="progress-bar">
                    <div class="progress-label">
                        <span>Comfort Built</span>
                        <span>@Session.CurrentComfort/@ComfortThreshold</span>
                    </div>
                    <div class="progress-track">
                        <div class="progress-fill" style="width: @GetComfortProgress()%"></div>
                    </div>
                </div>
                
                <div class="patience-display">
                    <div class="patience-value">@Session.CurrentPatience/@Session.MaxPatience</div>
                    <div class="patience-label">Patience</div>
                </div>
                
                <div class="progress-bar">
                    <div class="progress-label">
                        <span>Comfort</span>
                        <span>@GetComfortLabel()</span>
                    </div>
                    <div class="progress-track">
                        <div class="progress-fill" style="width: @GetComfortProgress()%"></div>
                    </div>
                </div>
            </div>

            <!-- State Section -->
            <div class="state-section">
                <div class="state-info">
                    <span>Emotional State:</span>
                    <span class="state-name">@Session.CurrentState</span>
                    <span class="state-effects">@GetStateEffects()</span>
                </div>
                <TokenDisplay />
            </div>
        }

        <!-- Narrative Section -->
        <div class="narrative-section">
            @if (!string.IsNullOrEmpty(LastNarrative))
            {
                <div class="narrative-text">@LastNarrative</div>
            }
            @if (!string.IsNullOrEmpty(LastDialogue))
            {
                <div class="npc-dialogue @GetStateClass()">
                    "@LastDialogue"
                </div>
            }
        </div>

        <!-- Action Section -->
        <div class="action-section">
            @if ((Context?.Type ?? ConversationType.Standard) == ConversationType.QuickExchange)
            {
                <!-- Exchange shows cards directly -->
                <div class="turn-indicator">Choose Your Response</div>
            }
            else if (!Session.ShouldEnd())
            {
                <div class="turn-indicator">Turn @(Session.TurnNumber + 1) • @Session.CurrentPatience patience remaining</div>
                <div class="action-choices">
                    <button class="action-button" @onclick="ExecuteListen" disabled="@IsProcessing">
                        <div>LISTEN</div>
                        <div class="action-details">@GetListenDetails()</div>
                    </button>
                    <button class="action-button" @onclick="ExecuteSpeak" disabled="@(!CanSpeak() || IsProcessing)">
                        <div>SPEAK</div>
                        <div class="action-details">@GetSpeakDetails()</div>
                    </button>
                    <button class="action-button exit-button" @onclick="ExitConversation">
                        <div>EXIT</div>
                        <div class="action-details">Leave conversation</div>
                    </button>
                </div>
            }
            else
            {
                <div class="conversation-complete">
                    <p>Conversation Complete</p>
                    <button @onclick="EndConversation">Return to Location</button>
                </div>
            }
        </div>

        <!-- Cards Section -->
        <div class="cards-section">
            <div class="cards-header">
                <div class="cards-title">Your Hand</div>
                @if ((Context?.Type ?? ConversationType.Standard) != ConversationType.QuickExchange)
                {
                    <div class="weight-tracker @(TotalSelectedWeight > GetWeightLimit() ? "over-limit" : "")">
                        <span>Weight Used:</span>
                        <span style="font-weight: bold;">@TotalSelectedWeight/@GetWeightLimit()</span>
                    </div>
                }
            </div>
            
            <div class="card-grid">
                @foreach (var card in Session.HandCards)
                {
                    <div class="dialog-card @GetCardClass(card) @GetObservationDecayClass(card) @(IsCardSelected(card) ? "selected" : "") @(IsObservationExpired(card) ? "unavailable" : "")" 
                         @onclick="() => ToggleCardSelection(card)">
                        @if (card.GetEffectiveWeight(Context.Session.CurrentState) == 0)
                        {
                            <div class="card-marker free">FREE!</div>
                        }
                        @if (card.IsObservation)
                        {
                            <div class="observation-decay-indicator @GetObservationDecayClass(card)">
                                @GetObservationDecayDescription(card)
                            </div>
                        }
                        <div class="card-header">
                            <div class="card-identity">
                                <div class="card-name">@GetCardName(card)</div>
                                <div class="card-tags">
                                    @foreach (var tag in GetCardTags(card))
                                    {
                                        <span class="tag @GetTagClass(tag)">@tag</span>
                                    }
                                </div>
                            </div>
                            <div class="card-weight">
                                <span class="weight-label">Weight</span>
                                <span class="weight-value">@card.GetEffectiveWeight(Context.Session.CurrentState)</span>
                            </div>
                        </div>
                        @if (card.Category == CardCategory.EXCHANGE && card.Context != null)
                        {
                            <div class="exchange-details">
                                <div class="exchange-cost">
                                    <div class="exchange-label">You Pay</div>
                                    <div class="exchange-value cost-value">@(card.Context.ExchangeCost ?? "Nothing")</div>
                                </div>
                                <div class="exchange-arrow">→</div>
                                <div class="exchange-reward">
                                    <div class="exchange-label">You Receive</div>
                                    <div class="exchange-value reward-value">@(card.Context.ExchangeReward ?? "Nothing")</div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="card-text">
                                @GetCardText(card)
                            </div>
                        }
                        @if (card.Category != CardCategory.EXCHANGE)
                        {
                            <div class="card-outcomes">
                                <div class="outcome success">
                                    <div class="outcome-header">
                                        <span class="outcome-label">Success</span>
                                        <span class="outcome-chance">@GetSuccessChance(card)%</span>
                                    </div>
                                    <div class="outcome-effects">
                                        <div class="effect">@GetSuccessEffect(card)</div>
                                    </div>
                                </div>
                                <div class="outcome failure">
                                    <div class="outcome-header">
                                        <span class="outcome-label">Failure</span>
                                        <span class="outcome-chance">@GetFailureChance(card)%</span>
                                    </div>
                                    <div class="outcome-effects">
                                        <div class="effect">@GetFailureEffect(card)</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="loading">Loading conversation...</div>
    }
</div>