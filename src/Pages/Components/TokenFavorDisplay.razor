@inject TokenFavorManager TokenFavorManager
@inject ConnectionTokenManager TokenManager
@inject GameWorld GameWorld
@inject MessageSystem MessageSystem

<div class="token-favor-section">
    @if (AvailableFavors.Any())
    {
        <h4>Special Favors Available</h4>
        <div class="favor-list">
            @foreach (var favor in AvailableFavors)
            {
                <div class="favor-card @(CanAfford(favor) ? "" : "disabled")">
                    <div class="favor-header">
                        <span class="favor-name">@favor.Name</span>
                        <span class="favor-cost">@favor.TokenCost @favor.RequiredTokenType</span>
                    </div>
                    <div class="favor-description">@favor.Description</div>
                    @if (!string.IsNullOrEmpty(favor.OfferText))
                    {
                        <div class="favor-offer-text">"@favor.OfferText"</div>
                    }
                    <div class="favor-actions">
                        @if (CanAfford(favor))
                        {
                            <button class="btn btn-primary" @onclick="() => PurchaseFavor(favor)">
                                Spend @favor.TokenCost @favor.RequiredTokenType Tokens
                            </button>
                        }
                        else
                        {
                            <span class="insufficient-tokens">
                                Need @favor.TokenCost @favor.RequiredTokenType tokens
                                (You have @GetTokenCount(favor))
                            </span>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter] public NPC CurrentNPC { get; set; }
    
    private List<TokenFavor> AvailableFavors = new List<TokenFavor>();
    
    protected override void OnParametersSet()
    {
        if (CurrentNPC != null)
        {
            RefreshAvailableFavors();
        }
    }
    
    private void RefreshAvailableFavors()
    {
        AvailableFavors = TokenFavorManager.GetAvailableFavors(CurrentNPC.ID);
    }
    
    private bool CanAfford(TokenFavor favor)
    {
        var tokenCount = TokenManager.GetTokenCount(CurrentNPC.ID, favor.RequiredTokenType);
        return tokenCount >= favor.TokenCost;
    }
    
    private int GetTokenCount(TokenFavor favor)
    {
        return TokenManager.GetTokenCount(CurrentNPC.ID, favor.RequiredTokenType);
    }
    
    private async Task PurchaseFavor(TokenFavor favor)
    {
        var result = TokenFavorManager.PurchaseFavor(favor.Id);
        if (result.Success)
        {
            MessageSystem.AddSystemMessage(result.Message, SystemMessageTypes.Success);
            RefreshAvailableFavors();
            StateHasChanged();
        }
        else
        {
            MessageSystem.AddSystemMessage(result.Message, SystemMessageTypes.Error);
        }
    }
}

