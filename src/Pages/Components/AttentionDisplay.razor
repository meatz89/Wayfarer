@inherits AttentionDisplayBase

<div class="attention-display">
    <div class="attention-points">
        @for (int i = 0; i < MaxAttention; i++)
        {
            <span class="attention-point @(i < CurrentAttention ? "filled" : "empty")">
                @(i < CurrentAttention ? "●" : "○")
            </span>
        }
    </div>
    @if (!string.IsNullOrEmpty(Narrative))
    {
        <div class="attention-narrative">
            @Narrative
        </div>
    }
</div>