@inherits LocationContentBase

@namespace Wayfarer.Pages.Components

@if (CurrentSpot != null)
{
    <!-- Active Obligations Queue (from mockup) -->
    <div class="obligations-panel" @onclick="() => GameScreen.NavigateToQueue()">
        <div class="obligations-header">
            <span>Active Obligations</span>
            <span class="queue-rule">Must complete Position 1 first!</span>
        </div>
        <div class="obligation-list">
            @{
                var obligationsList = ActiveObligations?.ToList() ?? new List<DeliveryObligation>();
            }
            @for (int i = 0; i < 3; i++)
            {
                if (i > 0)
                {
                    <span class="queue-arrow">‚Üí</span>
                }
                
                @if (i < obligationsList.Count)
                {
                    var obligation = obligationsList[i];
                    <div class="obligation-item @(i == 0 ? "position-1" : "")">
                        <span class="queue-position">@(i + 1)</span>
                        @obligation.SenderName ‚Üí @obligation.RecipientName 
                        <span class="deadline">(@GetDeadlineText(obligation.DeadlineInSegments))</span>
                    </div>
                }
                else
                {
                    <div class="obligation-item empty">
                        <span class="queue-position">@(i + 1)</span>
                        <span style="color: #7a6250;">[Empty]</span>
                    </div>
                }
            }
        </div>
    </div>

    <!-- Location Header (from mockup) -->
    <div class="location-header">
        <div class="location-path">
            @if (!string.IsNullOrEmpty(CurrentLocation?.Name))
            {
                <span>Lower Wards</span>
                <span>‚Üí</span>
                <span>@CurrentLocation.Name</span>
            }
        </div>
        <div class="location-name">@CurrentLocation?.Name</div>
        <div class="location-traits">
            <span class="trait">Public</span>
            <span class="trait">@GetTimeOfDayTrait()</span>
        </div>
    </div>

    <!-- Current Spot Banner (from mockup) -->
    <div class="current-spot-banner">
        <div class="current-spot-name">@CurrentSpot.Name</div>
        <div class="spot-traits">
            @foreach (var prop in CurrentSpot.SpotProperties ?? new List<SpotPropertyType>())
            {
                <span class="spot-trait @GetSpotTraitClass(prop)">@GetSpotTraitDisplay(prop)</span>
            }
        </div>
    </div>

    <div class="content-area">
        <!-- Atmosphere (from mockup) -->
        @if (CurrentSpot != null)
        {
            <div class="atmosphere-text">
                <LocationAtmosphereRenderer CurrentSpot="CurrentSpot" 
                                             CurrentTime="CurrentTime" 
                                             NPCsPresent="NPCsAtSpot" />
            </div>
        }

        <!-- Actions Available Here (from mockup) -->
        @{
            bool hasInvestigationAction = CanInvestigate();
            bool hasLocationActions = LocationActions.Any();
            bool hasAnyActions = hasInvestigationAction || hasLocationActions;
        }

        @if (hasAnyActions)
        {
            <div class="section-header">Actions Available Here</div>
            <div class="actions-grid">
                
                <!-- Investigation Approaches -->
                @if (hasInvestigationAction)
                {
                    <div class="investigation-section">
                        <div class="investigation-header">
                            <span class="investigation-title">üîç Investigation Approaches</span>
                            <span class="investigation-info">Current: @GetFamiliarityDisplay()</span>
                        </div>
                        <div class="investigation-approaches">
                            @foreach (var approach in AvailableInvestigationApproaches)
                            {
                                bool canAfford = CanAffordInvestigation(approach);
                                <div class="approach-btn @(canAfford ? "" : "approach-locked")"
                                     @onclick="async () => await InvestigateWithApproach(approach)">
                                    <div class="approach-name">@GetApproachDisplayName(approach)</div>
                                    <div class="approach-cost">1 attention ‚Ä¢ 1 segment</div>
                                    <div class="approach-description">@GetApproachDescription(approach)</div>
                                    @if (!canAfford)
                                    {
                                        <div class="approach-requirement">@GetApproachRequirement(approach)</div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }
                else if (CurrentLocation != null)
                {
                    Player player = GameWorld.GetPlayer();
                    int currentFamiliarity = player.GetLocationFamiliarity(CurrentLocation.Id);
                    bool isMaxFamiliarity = currentFamiliarity >= CurrentLocation.MaxFamiliarity;
                    AttentionStateInfo attentionState = GameFacade.GetCurrentAttentionState();
                    bool hasAttention = attentionState.Current >= 1;
                    <div class="action-card investigation unavailable">
                        <div class="action-name">üîç Investigate</div>
                        <div class="action-cost">
                            <span class="unavailable-reason">
                                @if (!hasAttention)
                                {
                                    <text>Need 1 attention</text>
                                }
                                else if (isMaxFamiliarity)
                                {
                                    <text>Fully familiar (@GetFamiliarityDisplay())</text>
                                }
                                else
                                {
                                    <text>Cannot investigate</text>
                                }
                            </span>
                        </div>
                        <div class="action-detail">
                            Investigate to discover location secrets
                        </div>
                    </div>
                }
                
                <!-- Work Actions -->
                @if (AvailableWorkActions.Any())
                {
                    <div class="work-section">
                        <div class="work-header">
                            <span class="work-title">üíº Work Opportunities</span>
                            <span class="work-info">Consumes entire time block (4 segments)</span>
                        </div>
                        <div class="work-actions">
                            @foreach (var work in AvailableWorkActions)
                            {
                                var (baseCoins, hungerPenalty, actualCoins) = GetWorkOutputPreview(work);
                                <div class="work-btn" @onclick="async () => await PerformWork(work)">
                                    <div class="work-name">@work.Name</div>
                                    <div class="work-type">@GetWorkTypeDisplay(work.Type)</div>
                                    <div class="work-output">
                                        Earn @actualCoins coins
                                        @if (hungerPenalty > 0)
                                        {
                                            <span class="hunger-penalty">(base @baseCoins - @hungerPenalty hunger)</span>
                                        }
                                    </div>
                                    @if (!string.IsNullOrEmpty(work.Description))
                                    {
                                        <div class="work-description">@work.Description</div>
                                    }
                                    @if (work.HungerReduction.HasValue)
                                    {
                                        <div class="work-benefit">üçû Includes meal (-@work.HungerReduction hunger)</div>
                                    }
                                    @if (work.HealthRestore.HasValue)
                                    {
                                        <div class="work-benefit">‚ù§Ô∏è Restores @work.HealthRestore health</div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Dynamic Location Actions -->
                @foreach (var action in LocationActions)
                {
                    <div class="action-card @(!action.IsAvailable ? "unavailable" : "") @(action.ActionType == "travel" ? "travel" : "")" 
                         @onclick="async () => { if (action.IsAvailable) await ExecuteLocationAction(action); }">
                        <div class="action-name">@action.Title</div>
                        <div class="action-cost">
                            @if (action.IsAvailable)
                            {
                                <span class="cost-value">@action.Cost</span>
                            }
                            else
                            {
                                <span class="unavailable-reason">Cannot perform action</span>
                            }
                        </div>
                        @if (!string.IsNullOrEmpty(action.Detail))
                        {
                            <div class="action-detail">@action.Detail</div>
                        }
                    </div>
                }
            </div>
        }

        <!-- People at This Spot (from mockup) -->
        @if (AvailableNpcs.Any())
        {
            <div class="section-header">People at This Spot</div>
            @foreach (var npc in AvailableNpcs)
            {
                <div class="npc-card">
                    <div class="npc-header">
                        <div>
                            <div class="npc-name">
                                @npc.Name
                                @if (HasUrgentLetter(npc.Id))
                                {
                                    <span class="urgent-badge" title="Has urgent letter in queue position 1!">URGENT</span>
                                }
                            </div>
                            <div class="npc-type">@GetNPCPersonalityDescription(npc)</div>
                        </div>
                        <div class="npc-state @GetStateClass(npc.ConnectionState)">@npc.ConnectionState</div>
                    </div>
                    <div class="npc-tokens">
                        <div class="token-display">
                            Trust: <span class="token-count">@GetTokenCount(npc.Id, ConnectionType.Trust)</span> 
                            <span class="token-effect">(@GetTokenEffect(npc.Id, ConnectionType.Trust))</span>
                        </div>
                        <div class="token-display">
                            Commerce: <span class="token-count">@GetTokenCount(npc.Id, ConnectionType.Commerce)</span>
                        </div>
                        <div class="token-display">
                            Status: <span class="token-count">@GetTokenCount(npc.Id, ConnectionType.Status)</span>
                        </div>
                        <div class="token-display">
                            Shadow: <span class="token-count">@GetTokenCount(npc.Id, ConnectionType.Shadow)</span>
                        </div>
                    </div>
                    <div class="npc-description">
                        @GetNPCDescription(npc)
                    </div>
                    <div class="npc-actions">
                        @foreach (var option in npc.ConversationOptions)
                        {
                            <div class="npc-action @(option.IsExchange ? "exchange" : GetActionClass(option.ConversationTypeId)) @(!option.IsAvailable ? "unavailable" : "")"
                                 @onclick="async () => { if (option.IsAvailable) { if (option.IsExchange) await StartExchange(npc.Id); else if (!string.IsNullOrEmpty(option.ConversationTypeId)) await StartTypedConversation(npc.Id, option.ConversationTypeId, option.GoalCardId); } }">
                                <span class="action-type">@option.Label</span>
                                <span class="action-details">
                                    @if (option.AttentionCost == 0)
                                    {
                                        <span>Free!</span>
                                    }
                                    else
                                    {
                                        <span class="cost-value">@option.AttentionCost attention</span>
                                    }
                                    <span> ‚Ä¢ </span>
                                    <span class="patience-calculation">@GetPatienceDisplay(npc, CurrentSpot!)</span>
                                    @if (option.ConversationTypeId == "request" && HasLetterRequest(npc.Id))
                                    {
                                        <span> ‚Ä¢ Letter request available!</span>
                                    }
                                </span>
                            </div>
                        }
                        @if (DevMode?.ShowDeckViewer == true)
                        {
                            <div class="npc-action" @onclick="() => ViewNPCDeck(npc.Id)">
                                <span class="action-type">üîç View Deck (Dev)</span>
                                <span class="action-details">Debug Tool</span>
                            </div>
                        }
                    </div>
                </div>
            }
        }

        <!-- Observations (from mockup) -->
        @if (AvailableObservations.Any() || TakenObservations.Any())
        {
            <div class="observations">
                <div class="observation-note">
                    Free observations - gain a state change card for conversations:
                </div>
                @foreach (var taken in TakenObservations)
                {
                    <div class="observation-item revealed">
                        <span class="observation-text">@taken.Name</span>
                        @if (!string.IsNullOrEmpty(taken.NarrativeText))
                        {
                            <div class="observation-narrative">
                                @taken.NarrativeText
                            </div>
                        }
                        @if (taken.GeneratedCard != null)
                        {
                            <div class="observation-decay">
                                Card freshness: @taken.GeneratedCard.GetDecayStateDescription(DateTime.Now)
                            </div>
                        }
                    </div>
                }
                @foreach (var obs in AvailableObservations)
                {
                    <div class="observation-item" @onclick="() => TakeObservation(obs.Id)">
                        <span class="observation-text">@obs.Name</span>
                        <span class="observation-reward">
                            <span class="cost-value">Free!</span>
                            <span class="reward-card">@GetObservationReward(obs)</span>
                        </span>
                    </div>
                }
            </div>
        }

        <!-- Other Spots (from mockup) -->
        @if (AvailableSpots.Any())
        {
            <div class="section-header">Other Spots in @CurrentLocation?.Name</div>
            <div class="spots-grid">
                @foreach (var spot in AvailableSpots)
                {
                    var isCurrentSpot = spot.Id == CurrentSpot?.Name;
                    <div class="spot-card @(isCurrentSpot ? "current" : "")" 
                         @onclick="async () => { if (!isCurrentSpot) await MoveToSpot(spot.Id); }">
                        <div class="spot-card-name">@spot.Name</div>
                        @{
                            var npcsAtSpot = GetNPCsAtSpot(spot.Id);
                            if (npcsAtSpot.Any())
                            {
                                <div class="spot-occupants">
                                    @foreach (var npc in npcsAtSpot)
                                    {
                                        <span class="npc-at-spot">
                                            @npc.Name 
                                            <span class="npc-state">(@GetNPCStateDisplay(npc))</span>
                                            @if (HasUrgentLetter(npc.ID))
                                            {
                                                <span class="urgent-marker" title="Urgent letter in queue!">‚ö†Ô∏è</span>
                                            }
                                        </span>
                                        @if (npc != npcsAtSpot.Last())
                                        {
                                            <span>, </span>
                                        }
                                    }
                                </div>
                            }
                        }
                        @if (isCurrentSpot)
                        {
                            <div class="you-are-here">You are here</div>
                        }
                        else
                        {
                            <div class="spot-move-action">Move here (instant, free)</div>
                        }
                    </div>
                }
            </div>
        }
    </div>
}
else
{
    <div class="loading">
        Loading location...
    </div>
}