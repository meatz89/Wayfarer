@using Wayfarer.GameState.Actions
@using Wayfarer.GameState.Extensions

<div class="locked-actions-section">
    @if (LockedActions != null && LockedActions.Any())
    {
        <div class="section-header">
            <h4>ðŸ”’ Locked Actions</h4>
            <span class="subtitle">Actions you could unlock:</span>
        </div>
        
        <div class="locked-actions-grid">
            @foreach (var locked in LockedActions.OrderByDescending(l => l.Progress))
            {
                <div class="locked-action-card" @onclick="() => ShowDetails(locked)">
                    <div class="action-header">
                        <span class="action-name">@locked.Action.Name</span>
                        <span class="progress-indicator">@GetProgressIcon(locked.Progress)</span>
                    </div>
                    
                    <div class="action-description">
                        @locked.Action.Description
                    </div>
                    
                    <div class="unlock-progress">
                        <div class="progress-visual">
                            @locked.GetProgressBar(20)
                        </div>
                        <span class="progress-percent">@((int)(locked.Progress * 100))%</span>
                    </div>
                    
                    <div class="unlock-hint">
                        <span class="hint-icon">ðŸ’¡</span>
                        <span class="hint-text">@locked.UnlockHint</span>
                    </div>
                    
                    @if (ShowingDetails == locked)
                    {
                        <div class="detailed-requirements">
                            <ActionPrerequisiteDisplay 
                                Prerequisites="@locked.Prerequisites" 
                                Player="@Player" 
                                GameWorld="@GameWorld" />
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>

<style>
    .locked-actions-section {
        margin-top: 1rem;
        padding: 1rem;
        background: var(--bg-tertiary);
        border-radius: 8px;
    }
    
    .section-header {
        margin-bottom: 1rem;
    }
    
    .section-header h4 {
        margin: 0;
        color: var(--text-primary);
    }
    
    .subtitle {
        font-size: 0.9rem;
        color: var(--text-secondary);
    }
    
    .locked-actions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1rem;
    }
    
    .locked-action-card {
        padding: 1rem;
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s;
        opacity: 0.8;
    }
    
    .locked-action-card:hover {
        opacity: 1;
        border-color: var(--primary-color);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    
    .action-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
    }
    
    .action-name {
        font-weight: bold;
        color: var(--text-primary);
    }
    
    .progress-indicator {
        font-size: 1.2rem;
    }
    
    .action-description {
        font-size: 0.9rem;
        color: var(--text-secondary);
        margin-bottom: 0.75rem;
    }
    
    .unlock-progress {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
        font-family: monospace;
        font-size: 0.85rem;
    }
    
    .progress-visual {
        color: var(--primary-color);
    }
    
    .progress-percent {
        color: var(--text-secondary);
        font-size: 0.8rem;
    }
    
    .unlock-hint {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem;
        background: var(--bg-tertiary);
        border-radius: 4px;
        font-size: 0.85rem;
    }
    
    .hint-icon {
        flex-shrink: 0;
    }
    
    .hint-text {
        color: var(--info-color);
    }
    
    .detailed-requirements {
        margin-top: 0.75rem;
        animation: slideDown 0.2s ease-out;
    }
    
    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

@code {
    [Parameter] public List<LockedAction> LockedActions { get; set; }
    [Parameter] public Player Player { get; set; }
    [Parameter] public GameWorld GameWorld { get; set; }
    
    private LockedAction ShowingDetails { get; set; }
    
    private void ShowDetails(LockedAction locked)
    {
        ShowingDetails = ShowingDetails == locked ? null : locked;
    }
    
    private string GetProgressIcon(double progress)
    {
        if (progress >= 0.75) return "ðŸŸ¢";
        if (progress >= 0.5) return "ðŸŸ¡";
        if (progress >= 0.25) return "ðŸŸ ";
        return "ðŸ”´";
    }
}