@implements IDisposable

<div class="system-messages-container">
    @if (Messages != null)
    {
        @foreach (var message in Messages.TakeLast(10))
        {
            <div class="system-message @GetMessageClass(message.Type) @(IsMessageExpiring(message) ? "message-expiring" : "")"
                 @key="@message">
                <div class="message-content">
                    @message.Message
                </div>
                <div class="message-timestamp">
                    @message.Timestamp.ToString("HH:mm")
                </div>
            </div>
        }
    }
</div>

@code {
    [Parameter] public List<SystemMessage>? Messages { get; set; }
    [Parameter] public EventCallback OnMessagesExpired { get; set; }
    
    private System.Threading.Timer? _timer;
    private HashSet<SystemMessage> _expiringMessages = new HashSet<SystemMessage>();
    
    protected override void OnInitialized()
    {
        // Check for expired messages every 100ms
        _timer = new System.Threading.Timer(CheckExpiredMessages, null, 100, 100);
    }
    
    private async void CheckExpiredMessages(object? state)
    {
        if (Messages != null)
        {
            var hasExpired = false;
            var hasExpiring = false;
            
            foreach (var message in Messages)
            {
                if (message.IsExpired && !_expiringMessages.Contains(message))
                {
                    hasExpired = true;
                }
                else if (!message.IsExpired)
                {
                    // Check if message will expire in next 500ms (for fade out animation)
                    var timeUntilExpiry = message.ExpiresAt - DateTime.Now;
                    if (timeUntilExpiry.TotalMilliseconds <= 500 && !_expiringMessages.Contains(message))
                    {
                        _expiringMessages.Add(message);
                        hasExpiring = true;
                    }
                }
            }
            
            if (hasExpired || hasExpiring)
            {
                await InvokeAsync(async () =>
                {
                    if (hasExpired && OnMessagesExpired.HasDelegate)
                    {
                        await OnMessagesExpired.InvokeAsync();
                    }
                    StateHasChanged();
                });
            }
        }
    }
    
    private bool IsMessageExpiring(SystemMessage message)
    {
        return _expiringMessages.Contains(message);
    }
    
    private string GetMessageClass(SystemMessageTypes type)
    {
        return type switch
        {
            SystemMessageTypes.Success => "message-success",
            SystemMessageTypes.Warning => "message-warning",
            SystemMessageTypes.Danger => "message-danger",
            SystemMessageTypes.Info => "message-info",
            _ => "message-info"
        };
    }
    
    public void Dispose()
    {
        _timer?.Dispose();
    }
}

<style>
    .system-messages-container {
        position: fixed;
        top: 1rem;
        right: 1rem;
        max-width: 400px;
        z-index: 1000;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .system-message {
        background-color: rgba(0, 0, 0, 0.9);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 8px;
        padding: 1rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
        transition: all 0.3s ease;
        animation: slideIn 0.3s ease-out;
    }
    
    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(100%);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
        
    .message-content {
        flex: 1;
        color: #ffffff;
        font-size: 0.9rem;
        line-height: 1.4;
    }
    
    .message-timestamp {
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.75rem;
        white-space: nowrap;
    }
    
    .message-success {
        border-left: 4px solid #28a745;
    }
    
    .message-success .message-content {
        color: #90EE90;
    }
    
    .message-warning {
        border-left: 4px solid #ffc107;
    }
    
    .message-warning .message-content {
        color: #FFD700;
    }
    
    .message-danger {
        border-left: 4px solid #dc3545;
    }
    
    .message-danger .message-content {
        color: #FF6B6B;
    }
    
    .message-info {
        border-left: 4px solid #17a2b8;
    }
    
    .message-info .message-content {
        color: #87CEEB;
    }
    
    .message-expiring {
        animation: fadeOut 0.5s ease-out forwards;
    }
    
    @@keyframes fadeOut {
        from {
            opacity: 1;
            transform: translateX(0);
        }
        to {
            opacity: 0;
            transform: translateX(100%);
        }
    }
</style>