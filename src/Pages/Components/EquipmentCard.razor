@namespace Wayfarer.Pages.Components
@using Wayfarer.Pages.Components.Shared
@*
Equipment Card - Individual equipment display
Shows contexts, state, durability, and actions
*@

<div class="equipment-card">
    <div class="equipment-header">
        <h4 class="equipment-name">@Equipment.Name</h4>
    </div>

    <p class="equipment-description">@Equipment.Description</p>

    <div class="equipment-contexts">
        <span class="contexts-label">Applicable Contexts:</span>
        <div class="context-tags">
            @foreach (var context in Equipment.ApplicableContexts)
            {
                <ContextTag ContextName="@context.ToString()" />
            }
        </div>
    </div>

    <div class="equipment-stats">
        <div class="equipment-stat">
            <span class="stat-label">Reduction:</span>
            <span class="stat-value">-@Equipment.IntensityReduction intensity</span>
        </div>

        @if (Equipment.UsageType != EquipmentUsageType.Permanent)
        {
            <div class="equipment-stat">
                <span class="stat-label">Type:</span>
                <span class="stat-value">@Equipment.UsageType.ToString()</span>
            </div>
        }

        @if (Equipment.UsageType == EquipmentUsageType.Exhaustible)
        {
            <div class="equipment-stat">
                <span class="stat-label">State:</span>
                <span class="stat-value state-@Equipment.CurrentState.ToString().ToLower()">
                    @Equipment.CurrentState.ToString()
                </span>
            </div>

            <div class="equipment-stat">
                <span class="stat-label">Durability:</span>
                <span class="stat-value">@Equipment.CurrentUses / @Equipment.ExhaustAfterUses uses</span>
            </div>

            @if (Equipment.CurrentState == EquipmentState.Exhausted)
            {
                <div class="equipment-stat">
                    <span class="stat-label">Repair Cost:</span>
                    <span class="stat-value">@Equipment.RepairCost coins</span>
                </div>
            }
        }
    </div>

    <div class="equipment-prices">
        <span class="buy-price">Buy: @Equipment.BuyPrice coins</span>
        <span class="sell-price">Sell: @Equipment.SellPrice coins</span>
    </div>

    @if (ShowActions)
    {
        <div class="equipment-actions">
            @if (Equipment.UsageType == EquipmentUsageType.Exhaustible &&
                 Equipment.CurrentState == EquipmentState.Exhausted &&
                 OnRepair.HasDelegate)
            {
                <button class="btn-repair" @onclick="OnRepair">
                    Repair (@Equipment.RepairCost coins)
                </button>
            }

            @if (OnSell.HasDelegate)
            {
                <button class="btn-sell" @onclick="OnSell">
                    Sell (@Equipment.SellPrice coins)
                </button>
            }
        </div>
    }
</div>

@code {
    [Parameter] public Equipment Equipment { get; set; }
    [Parameter] public bool ShowActions { get; set; } = false;
    [Parameter] public EventCallback OnSell { get; set; }
    [Parameter] public EventCallback OnRepair { get; set; }
}
