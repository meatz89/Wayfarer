@using Wayfarer.Pages
@inject LocationActionManager LocationActionManager
@inject GameWorldManager GameWorldManager
@inject GameWorld GameWorld
@inject NPCRepository NPCRepository

<div class="location-actions">
    <h3>Actions (@GameWorld.TimeManager.HoursRemaining hours remaining)</h3>
    <p class="actions-info">Click on a person to see available actions.</p>
</div>

<style>
    .location-actions {
        margin-top: 1rem;
        padding: 1rem;
        border-top: 1px solid #444;
    }
    
    .action-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1rem;
        margin: 1rem 0;
    }
    
    .action-card {
        border: 1px solid #444;
        padding: 1rem;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 4px;
    }
    
    .action-card h4 {
        margin: 0 0 0.5rem 0;
        color: #ffd700;
    }
    
    .action-description {
        font-style: italic;
        color: #ccc;
        margin: 0.5rem 0;
    }
    
    .resource-costs {
        display: flex;
        gap: 1rem;
        margin: 0.5rem 0;
        font-size: 0.9rem;
    }
    
    .cost-item {
        color: #ff6b6b;
    }
    
    .action-effect {
        color: #4ecdc4;
        margin: 0.5rem 0;
        font-weight: bold;
    }
    
    .btn-action {
        background: #2a5a2a;
        color: white;
        border: 1px solid #4a8a4a;
        padding: 0.5rem 1rem;
        cursor: pointer;
        width: 100%;
        margin-top: 0.5rem;
    }
    
    .btn-action:hover {
        background: #3a7a3a;
    }
    
    .actions-info {
        text-align: center;
        color: #999;
        padding: 1rem;
        font-style: italic;
    }
    
    .action-footer {
        margin-top: 2rem;
        text-align: center;
    }
    
    .btn-secondary {
        background: #444;
        color: white;
        border: 1px solid #666;
        padding: 0.5rem 2rem;
        cursor: pointer;
    }
</style>

@namespace Wayfarer.Pages

@code {
    private List<ActionOption> availableActions = new();
    
    protected override void OnInitialized()
    {
        RefreshActions();
    }
    
    private void RefreshActions()
    {
        availableActions = LocationActionManager.GetAvailableActions();
    }
    
    private async Task ExecuteAction(ActionOption action)
    {
        // UI actions must go through GameWorldManager, not LocationActionManager directly
        bool success = await GameWorldManager.ExecuteAction(action);
        
        if (success)
        {
            // Refresh the action list as available actions may have changed
            RefreshActions();
            
            // Update the UI to reflect resource changes
            StateHasChanged();
        }
    }
    
    private string GetNPCProfession(string npcId)
    {
        if (string.IsNullOrEmpty(npcId)) return "";
        
        var npc = NPCRepository.GetNPCById(npcId);
        return npc?.Name ?? "Someone";
    }
}