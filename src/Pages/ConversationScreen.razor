@page "/conversation/{NpcId}"

@inherits ConversationScreenBase

<div class="game-container">
    @if (Session != null)
    {
        <!-- Time and Deadline Header -->
        <div class="header">
            <div class="time-bar">
                <span class="current-time">@GetCurrentTimeDisplay()</span>
                @if (GetUrgentDeadline() != null)
                {
                    <span class="deadline-warning">@GetUrgentDeadline()</span>
                }
            </div>
        </div>

        <!-- Location Context -->
        <div class="location-context">
            <div class="location-path">
                @foreach (var segment in GetLocationPath())
                {
                    <span>@segment</span>
                    @if (segment != GetLocationPath().Last())
                    {
                        <span>â†’</span>
                    }
                }
            </div>
            <div class="location-spot">@GetCurrentSpot()</div>
        </div>

        <!-- NPC Header with State -->
        <div class="conversation-header">
            <div class="npc-section">
                <h2>@Session.NPC.Name</h2>
                <div class="npc-state @GetStateClass()">
                    @GetStateDescription()
                </div>

                <!-- Token Display -->
                <div class="relationship-tokens">
                    @foreach (var tokenType in Enum.GetValues<ConnectionType>().Where(t => t != ConnectionType.None))
                    {
                        <div class="token-type">
                            <span class="token-label">@tokenType</span>
                            <div class="token-dots">
                                @for (int i = 0; i < 5; i++)
                                {
                                    <div class="token-dot @(i < GetTokenCount(tokenType) ? "filled" : "")"></div>
                                }
                            </div>
                            <span class="token-effect">@GetTokenEffect(tokenType)</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Progress Display -->
            <div class="progress-section">
                <div class="progress-bar">
                    <div class="progress-label">
                        <span>Comfort Built</span>
                        <span>@Session.CurrentComfort/@GetComfortTarget()</span>
                    </div>
                    <div class="progress-track">
                        <div class="progress-fill" style="width: @GetComfortPercent()%"></div>
                        <div class="progress-thresholds">
                            <div class="threshold-marker" style="left: 25%">
                                <span class="threshold-label">5</span>
                            </div>
                            <div class="threshold-marker" style="left: 50%">
                                <span class="threshold-label">10 (Letter)</span>
                            </div>
                            <div class="threshold-marker" style="left: 75%">
                                <span class="threshold-label">15</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="turns-remaining @(Session.CurrentPatience <= 3 ? "low" : "")">
                    <div class="turns-display @(Session.CurrentPatience <= 3 ? "low" : "")">@Session.CurrentPatience</div>
                    <div class="turns-label">Turns Left</div>
                </div>

                <div class="progress-bar">
                    <div class="progress-label">
                        <span>Current Depth</span>
                        <span>@Session.CurrentDepth @GetDepthName()</span>
                    </div>
                    <div class="progress-track">
                        <div class="progress-fill" style="width: @(Session.CurrentDepth * 33)%"></div>
                    </div>
                </div>
            </div>

            <!-- State Rules Display -->
            <div class="state-indicator">
                <span class="state-label">Emotional State:</span>
                <span class="state-name">@Session.CurrentState</span>
                <span class="state-effects">@ConversationRules.GetStateEffects(Session.CurrentState)</span>
            </div>
        </div>

        <!-- Narrative Section -->
        <div class="narrative-section">
            <StateNarrativeRenderer 
                State="@Session.CurrentState" 
                Personality="@Session.NPC.PersonalityType"
                MinutesUntilDeadline="@GetMinutesUntilDeadline()"
                NPCName="@Session.NPC.Name" />
            
            <NPCDialogueGenerator
                State="@Session.CurrentState"
                NPC="@Session.NPC"
                MeetingObligation="@GetMeetingObligation()"
                TurnNumber="@Session.TurnNumber" />
        </div>

        <!-- Action Choice -->
        <div class="action-section">
            <div class="turn-indicator">
                Turn @Session.TurnNumber of @Session.MaxPatience â€¢ Each choice uses 1 turn
            </div>

            @if (Session.IsHandOverflowing())
            {
                <div class="hand-overflow-warning">
                    <span>âš  Hand full! You have too much to share - must SPEAK first</span>
                </div>
            }

            <div class="action-choices">
                <div class="action-button @(SelectedAction == ActionType.Listen ? "selected" : "")"
                     @onclick="() => SelectAction(ActionType.Listen)">
                    @if (HasOpportunities())
                    {
                        <div class="action-warning">âš  Fleeting moments vanish!</div>
                    }
                    <div>ðŸ‘‚ LISTEN</div>
                    <div class="action-description">
                        Let them continue â€¢ Draw @GetDrawCount() thoughts
                    </div>
                </div>

                <div class="action-button @(SelectedAction == ActionType.Speak ? "selected" : "")"
                     @onclick="() => SelectAction(ActionType.Speak)">
                    <div>ðŸ’­ SPEAK</div>
                    <div class="action-description">
                        Respond now â€¢ Use cards
                    </div>
                </div>
            </div>
        </div>

        <!-- Card Hand -->
        <div class="dialog-section">
            <div class="dialog-header">
                <div class="dialog-title">Your Thoughts</div>
                <div class="hand-status">
                    <span class="hand-count">@Session.HandCards.Count cards in hand</span>
                    @if (Session.ObservationCards.Any())
                    {
                        <span class="hand-note">â€¢ @Session.ObservationCards.Count from observation</span>
                    }
                </div>
                <div class="weight-tracker @(IsOverWeight() ? "overlimit" : "")">
                    <span>Weight:</span>
                    <span class="weight-display">
                        @if (HasCrisisSelected())
                        {
                            <text>Crisis!</text>
                        }
                        else
                        {
                            <text>@GetCurrentWeight()/@GetMaxWeight()</text>
                        }
                    </span>
                </div>
            </div>

            <div class="dialog-options">
                @foreach (var card in Session.HandCards)
                {
                    <div class="dialog-card @GetCardClasses(card) @(SelectedCards.Contains(card) ? "selected" : "")"
                         @onclick="() => ToggleCard(card)">
                        
                        <div class="card-header">
                            <div class="card-identity">
                                <div class="card-name">@GetCardDisplayName(card)</div>
                                <div class="card-tags">
                                    <span class="tag type-@card.GetCategoryClass()">@card.Category</span>
                                    <span class="tag">@card.Type</span>
                                    <span class="tag persistence">@GetPersistenceIcon(card.Persistence) @card.Persistence</span>
                                    @if (card.IsObservation)
                                    {
                                        <span class="tag observation">@card.ObservationSource</span>
                                    }
                                </div>
                            </div>
                            <div class="card-weight">
                                <span class="weight-label">Weight</span>
                                <span class="weight-value">@card.Weight</span>
                            </div>
                        </div>

                        <div class="card-text">
                            <CardDialogueRenderer 
                                Template="@card.Template" 
                                Context="@card.Context"
                                NPCName="@Session.NPC.Name"
                                IsPlayerCard="true" />
                        </div>

                        <div class="card-outcomes">
                            <div class="outcome success">
                                <div class="outcome-header">
                                    <span class="outcome-label">Success</span>
                                    <span class="outcome-chance">@card.CalculateSuccessChance(GetStatusTokens())%</span>
                                </div>
                                <div class="outcome-effects">
                                    <div class="effect">@GetSuccessEffect(card)</div>
                                </div>
                            </div>
                            <div class="outcome failure">
                                <div class="outcome-header">
                                    <span class="outcome-label">Failure</span>
                                    <span class="outcome-chance">@(100 - card.CalculateSuccessChance(GetStatusTokens()))%</span>
                                </div>
                                <div class="outcome-effects">
                                    <div class="effect">@GetFailureEffect(card)</div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Play Button -->
        <div class="play-section">
            <button class="play-button" @onclick="ExecuteAction" disabled="@(!CanExecute())">
                @GetPlayButtonText()
            </button>
            <div class="play-info">@GetPlayInfo()</div>

            @if (ShowOpportunityWarning())
            {
                <div class="opportunity-warning active">
                    âš  Warning: Listening will cause ALL fleeting opportunities to vanish forever
                </div>
            }
        </div>
    }
    else
    {
        <div class="loading">Starting conversation...</div>
    }
</div>